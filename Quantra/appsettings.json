{
  "Logging": {
    "MinimumLevel": "Information",
    "UseConsoleLogging": true,
    "UseFileLogging": true,
    "UseDatabaseLogging": true,
    "LogFilePath": "logs/quantra-.log",
    "UseJsonFormatting": true,
    "EnableAsyncLogging": true,
    "RetainedFileCountLimit": 31,
    "FileSizeLimitBytes": 1073741824,
    "RedactSensitiveData": true,
    "SourceLevelOverrides": {
      "Microsoft": "Warning",
      "System": "Warning",
      "Quantra.API": "Debug",
      "Quantra.Database": "Debug",
      "Quantra.Trading": "Debug",
      "Quantra.MLInference": "Debug",
      "Quantra.CrossCutting.Monitoring": "Information",
      "Quantra.Services": "Information",
      "Quantra.Controls": "Information"
    }
  },
  "ErrorHandling": {
    "DefaultMaxRetries": 3,
    "DefaultRetryDelayMs": 100,
    "DefaultBackoffFactor": 2.0,
    "DefaultMaxDelayMs": 5000,
    "UseJitter": true,
    "CircuitBreakers": {
      "AlphaVantage": {
        "FailureThreshold": 5,
        "DurationOfBreakMs": 60000,
        "SamplingDurationMs": 300000
      },
      "Database": {
        "FailureThreshold": 3,
        "DurationOfBreakMs": 10000,
        "SamplingDurationMs": 60000
      }
    }
  },
  "Monitoring": {
    "EnablePerformanceMetrics": true,
    "MetricRetentionDays": 7,
    "ResourceMonitoringIntervalSeconds": 60,
    "HighMemoryThresholdMB": 1024,
    "CriticalMemoryThresholdMB": 1536,
    "HighCpuThresholdPercent": 80
  },
  "Application": {
    "Name": "Quantra",
    "Version": "1.0.0",
    "Environment": "Production"
  },
  "Api": {
    "AlphaVantage": {
      "ApiKey": "",
      "BaseUrl": "https://www.alphavantage.co/query",
      "DefaultTimeout": 30,
      "EnableApiModalChecks": true
    },
    "News": {
      "ApiKey": "",
      "BaseUrl": "https://newsapi.org/v2",
      "DefaultTimeout": 30
    }
  },
  "Cache": {
    "EnableHistoricalDataCache": true,
    "CacheDurationMinutes": 15
  },
  "UI": {
    "EnableDarkMode": true,
    "ChartUpdateIntervalSeconds": 2,
    "DefaultGridRows": 4,
    "DefaultGridColumns": 4,
    "GridBorderColor": "#FF00FFFF"
  },
  "Notifications": {
    "EnablePriceAlerts": true,
    "EnableTradeNotifications": true,
    "Email": {
      "DefaultRecipient": "",
      "EnableEmailAlerts": false,
      "EnableStandardAlertEmails": false,
      "EnableOpportunityAlertEmails": false,
      "EnablePredictionAlertEmails": false,
      "EnableGlobalAlertEmails": false,
      "EnableSystemHealthAlertEmails": false
    },
    "SMS": {
      "DefaultRecipient": "",
      "EnableSmsAlerts": false,
      "EnableStandardAlertSms": false,
      "EnableOpportunityAlertSms": false,
      "EnablePredictionAlertSms": false,
      "EnableGlobalAlertSms": false
    },
    "Push": {
      "UserId": "",
      "EnablePushNotifications": false,
      "EnableStandardAlertPushNotifications": false,
      "EnableOpportunityAlertPushNotifications": false,
      "EnablePredictionAlertPushNotifications": false, 
      "EnableGlobalAlertPushNotifications": false,
      "EnableTechnicalIndicatorAlertPushNotifications": false,
      "EnableSentimentShiftAlertPushNotifications": false,
      "EnableSystemHealthAlertPushNotifications": false,
      "EnableTradeExecutionPushNotifications": false
    },
    "Sound": {
      "EnableAlertSounds": true,
      "DefaultAlertSound": "alert.wav",
      "DefaultOpportunitySound": "opportunity.wav",
      "DefaultPredictionSound": "prediction.wav",
      "DefaultTechnicalIndicatorSound": "indicator.wav",
      "AlertVolume": 80
    },
    "Visual": {
      "EnableVisualIndicators": true,
      "DefaultVisualIndicatorType": "Toast",
      "DefaultVisualIndicatorColor": "#FFFF00",
      "VisualIndicatorDuration": 5
    }
  },
  "Trading": {
    "EnablePaperTrading": true,
    "RiskLevel": "Low",
    "AccountSize": 100000.0,
    "BaseRiskPercentage": 0.01,
    "PositionSizingMethod": "FixedRisk",
    "MaxPositionSizePercent": 0.10,
    "FixedTradeAmount": 5000.0,
    "UseVolatilityBasedSizing": false,
    "ATRMultiple": 2.0,
    "UseKellyCriterion": false,
    "HistoricalWinRate": 0.55,
    "HistoricalRewardRiskRatio": 2.0,
    "KellyFractionMultiplier": 0.5
  },
  "SentimentAnalysis": {
    "News": {
      "EnableNewsSentimentAnalysis": true,
      "NewsArticleRefreshIntervalMinutes": 30,
      "MaxNewsArticlesPerSymbol": 15,
      "EnableNewsSourceFiltering": true,
      "EnabledNewsSources": {
        "bloomberg.com": true,
        "cnbc.com": true,
        "wsj.com": true,
        "reuters.com": true,
        "marketwatch.com": true,
        "finance.yahoo.com": true,
        "ft.com": true
      }
    },
    "AnalystRatings": {
      "EnableAnalystRatings": true,
      "RatingsCacheExpiryHours": 24,
      "EnableRatingChangeAlerts": true,
      "EnableConsensusChangeAlerts": true,
      "AnalystRatingSentimentWeight": 2.0
    },
    "InsiderTrading": {
      "EnableInsiderTradingAnalysis": true,
      "InsiderDataRefreshIntervalMinutes": 120,
      "EnableInsiderTradingAlerts": true,
      "TrackNotableInsiders": true,
      "InsiderTradingSentimentWeight": 2.5,
      "HighlightCEOTransactions": true,
      "HighlightOptionsActivity": true,
      "EnableInsiderTransactionNotifications": true
    }
  }
}