<UserControl x:Class="Quantra.Controls.TransactionsControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Quantra"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:Quantra.Converters"
        Background="{StaticResource DarkBlueBrush}"
        MinHeight="300" MinWidth="400" Width="826">
    <UserControl.Resources>
        <ResourceDictionary>
            <converters:ProfitLossColorConverter x:Key="ProfitLossColorConverter"/>
            <converters:WinRateColorConverter x:Key="WinRateColorConverter"/>
            <converters:TradeModeTextConverter x:Key="TradeModeTextConverter"/>
            <converters:TradeModeForegroundConverter x:Key="TradeModeForegroundConverter"/>
            <converters:TradeModeBackgroundConverter x:Key="TradeModeBackgroundConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Border Background="{StaticResource DarkBlueBrush}" CornerRadius="10" Margin="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title Block -->
                <Border Grid.Row="0" Background="#262638" BorderThickness="0,0,0,1" BorderBrush="#3E3E56" Padding="15,8">
                    <TextBlock Text="Transaction History" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                </Border>

                <Grid Grid.Row="1" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Filters Section -->
                    <materialDesign:Card Grid.Row="0" Margin="0,0,0,10" Style="{StaticResource EnhancedContentCardStyle}">
                        <Grid Margin="15,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Filter Transactions" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource LightBlueBrush}" Margin="0,0,0,10"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Date Range -->
                                <TextBlock Grid.Column="0" Text="Date Range:" Foreground="White" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <DatePicker Grid.Column="1" x:Name="StartDatePicker" Style="{StaticResource EnhancedDatePickerStyle}"
                                            SelectedDate="{Binding StartDate}" Margin="0,0,5,0"/>

                                <TextBlock Grid.Column="2" Text="to" Foreground="White" Margin="5,0" VerticalAlignment="Center"/>
                                <DatePicker Grid.Column="3" x:Name="EndDatePicker" Style="{StaticResource EnhancedDatePickerStyle}"
                                            SelectedDate="{Binding EndDate}" Margin="5,0,15,0"/>

                                <!-- Type Filter -->
                                <TextBlock Grid.Column="4" Text="Type:" Foreground="White" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <ComboBox Grid.Column="5" x:Name="TypeFilterComboBox" Style="{StaticResource EnhancedComboBoxStyle}"
                                          SelectedItem="{Binding SelectedTransactionType}" Margin="0,5,10,5">
                                    <ComboBoxItem Content="All" IsSelected="True"/>
                                    <ComboBoxItem Content="Buy Orders"/>
                                    <ComboBoxItem Content="Sell Orders"/>
                                    <ComboBoxItem Content="Paper Trades"/>
                                    <ComboBoxItem Content="Real Trades"/>
                                    <ComboBoxItem Content="Profitable"/>
                                    <ComboBoxItem Content="Loss-Making"/>
                                </ComboBox>

                                <!-- Apply Filters Button -->
                                <Button Grid.Column="6" Content="Apply Filters" Style="{StaticResource ButtonStyle1}"
                                        Background="#3E90FF" Foreground="White" Height="36"
                                        Click="ApplyFiltersButton_Click" Margin="10,5,5,5"/>
                            </Grid>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Transaction History Section -->
                    <materialDesign:Card Grid.Row="1" Margin="0,0,0,10" Style="{StaticResource EnhancedContentCardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Transaction History" FontSize="14" FontWeight="SemiBold"
                                           Foreground="{StaticResource LightBlueBrush}" Margin="15,15,0,10"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,15,15,10">
                                    <TextBox x:Name="SearchTextBox" Width="200" Style="{StaticResource EnhancedTextBoxStyle}"
                                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:HintAssist.Hint="Search by symbol..."
                                            KeyUp="SearchTextBox_KeyUp"/>

                                    <Button x:Name="SearchButton" Width="36" Height="36" Margin="5,0,0,0"
                                            Style="{StaticResource ButtonStyle1}" Background="#3E3E56"
                                            Click="SearchButton_Click">
                                        <materialDesign:PackIcon Kind="Magnify" Width="20" Height="20"/>
                                    </Button>
                                </StackPanel>
                            </Grid>

                            <DataGrid x:Name="TransactionsGrid" Grid.Row="1"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      ItemsSource="{Binding FilteredTransactions}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      GridLinesVisibility="None"
                                      RowBackground="#1A253A"
                                      AlternatingRowBackground="#1E2A40"
                                      HeadersVisibility="Column"
                                      SelectedItem="{Binding SelectedTransaction}"
                                      MouseDoubleClick="TransactionsGrid_MouseDoubleClick"
                                      Height="Auto">
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#262638"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="Padding" Value="10,5"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush" Value="#3E3E56"/>
                                    </Style>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Padding" Value="10,5"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Style>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Margin" Value="0,2"/>
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Date"
                                                        Binding="{Binding ExecutionTime, StringFormat=g}"
                                                        Width="140"/>
                                    <DataGridTextColumn Header="Symbol"
                                                        Binding="{Binding Symbol}"
                                                        Width="70"/>
                                    <DataGridTextColumn Header="Type"
                                                        Binding="{Binding TransactionType}"
                                                        Width="60"/>
                                    <DataGridTextColumn Header="Quantity"
                                                        Binding="{Binding Quantity}"
                                                        Width="70"/>
                                    <DataGridTextColumn Header="Price"
                                                        Binding="{Binding ExecutionPrice, StringFormat=N2}"
                                                        Width="80"/>
                                    <DataGridTextColumn Header="Total Value"
                                                        Binding="{Binding TotalValue, StringFormat=N2}"
                                                        Width="90"/>
                                    <DataGridTextColumn Header="Fees"
                                                        Binding="{Binding Fees, StringFormat=N2}"
                                                        Width="70"/>
                                    <DataGridTemplateColumn Header="PandL" Width="90">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding RealizedPnL, StringFormat=N2}"
                                                           Foreground="{Binding RealizedPnL, Converter={StaticResource ProfitLossColorConverter}}"
                                                           HorizontalAlignment="Right"
                                                           Margin="0,0,10,0"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="PandL %" Width="70">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding RealizedPnLPercentage, StringFormat=P2}"
                                                           Foreground="{Binding RealizedPnLPercentage, Converter={StaticResource ProfitLossColorConverter}}"
                                                           HorizontalAlignment="Right"
                                                           Margin="0,0,10,0"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Trade Type" Width="100">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding IsPaperTrade, Converter={StaticResource TradeModeBackgroundConverter}}"
                                                        CornerRadius="3" Padding="5,2">
                                                    <TextBlock Text="{Binding IsPaperTrade, Converter={StaticResource TradeModeTextConverter}}"
                                                               FontWeight="SemiBold"
                                                               Foreground="{Binding IsPaperTrade, Converter={StaticResource TradeModeForegroundConverter}}"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Notes"
                                                        Binding="{Binding Notes}"
                                                        Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Performance Summary Section -->
                    <materialDesign:Card Grid.Row="2" Margin="0,0,0,10" Style="{StaticResource EnhancedContentCardStyle}">
                        <Grid Margin="15,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Performance Summary" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource LightBlueBrush}" Margin="0,0,0,10"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Real Trading Summary -->
                                <Border Grid.Column="0" Background="#1A253A" CornerRadius="4" Margin="0,0,7.5,0" Padding="15,10">
                                    <StackPanel>
                                        <TextBlock Text="Real Trading PandL" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding RealTradingPnL, StringFormat=N2}"
                                                   Foreground="{Binding RealTradingPnL, Converter={StaticResource ProfitLossColorConverter}}"
                                                   FontSize="16" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>

                                <!-- Paper Trading Summary -->
                                <Border Grid.Column="1" Background="#1A253A" CornerRadius="4" Margin="7.5,0,7.5,0" Padding="15,10">
                                    <StackPanel>
                                        <TextBlock Text="Paper Trading PandL" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding PaperTradingPnL, StringFormat=N2}"
                                                   Foreground="{Binding PaperTradingPnL, Converter={StaticResource ProfitLossColorConverter}}"
                                                   FontSize="16" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>

                                <!-- Win Rate -->
                                <Border Grid.Column="2" Background="#1A253A" CornerRadius="4" Margin="7.5,0,7.5,0" Padding="15,10">
                                    <StackPanel>
                                        <TextBlock Text="Win Rate" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding WinRate, StringFormat=P1}"
                                                   Foreground="{Binding WinRate, Converter={StaticResource WinRateColorConverter}}"
                                                   FontSize="16" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>

                                <!-- Total Fees -->
                                <Border Grid.Column="3" Background="#1A253A" CornerRadius="4" Margin="7.5,0,0,0" Padding="15,10">
                                    <StackPanel>
                                        <TextBlock Text="Total Fees" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding TotalFees, StringFormat=N2}"
                                                   Foreground="#E05050"
                                                   FontSize="16" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
                        <Button x:Name="ExportButton" Content="Export Data" Width="120" Height="36"
                                Margin="0,0,10,0" Click="ExportButton_Click"
                                Style="{StaticResource ButtonStyle1}"
                                Background="#3E3E56" Foreground="White"
                                BorderBrush="{StaticResource AccentBlueBrush}"/>

                        <Button x:Name="RefreshButton" Content="Refresh" Width="120" Height="36"
                                Margin="0,0,10,0" Click="RefreshButton_Click"
                                Style="{StaticResource ButtonStyle1}"
                                Background="#3E3E56" Foreground="White"
                                BorderBrush="{StaticResource AccentBlueBrush}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Success/Error Notification -->
        <Border x:Name="NotificationPanel" Visibility="Collapsed"
                Background="{StaticResource DarkBlueAccentBrush}"
                BorderBrush="{Binding NotificationBorderBrush}" BorderThickness="1"
                CornerRadius="6" Padding="15"
                HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"
                MinWidth="300">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Grid.Column="0" Kind="{Binding NotificationIcon}"
                       Width="24" Height="24" Margin="0,0,15,0"
                       Foreground="{Binding NotificationIconColor}"/>

                <TextBlock Grid.Column="1" Text="{Binding NotificationText}"
                         Foreground="White" TextWrapping="Wrap" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
