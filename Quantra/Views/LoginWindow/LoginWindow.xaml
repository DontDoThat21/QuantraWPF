<Window x:Class="Quantra.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Quantra"
        Title="Login" Height="750" Width="450" WindowStartupLocation="CenterScreen"
        Background="Transparent" WindowStyle="None" AllowsTransparency="True" 
        MinHeight="700" MinWidth="400">
    <Window.Resources>
        <!-- Resize grip style -->
        <Style x:Key="ResizeGripStyle" TargetType="Rectangle">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Fill" Value="Transparent"/>
            <Setter Property="Stroke" Value="Transparent"/>
            <Setter Property="StrokeThickness" Value="0"/>
            <Setter Property="Cursor" Value="SizeNWSE"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </Window.Resources>

    <Grid>
        <!-- Add ResizableBorder for consistent behavior with other windows -->
        <local:ResizableBorder/>
        
        <!-- Updated Border with CornerRadius="10" to match the title bar's top corners -->
        <Border Background="{StaticResource DarkBlueBrush}" CornerRadius="10" Margin="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Custom Title Bar -->
                <local:SharedTitleBar x:Name="TitleBar" Title="Login" Grid.Row="0"/>
                
                <!-- Main Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <!-- App Logo/Icon -->
                        <Border Width="70" Height="70" Background="Transparent" Margin="0,10,0,10">
                            <Path Data="M12,2L1,21H23M12,6L19.5,19H4.5" Fill="{StaticResource LightBlueBrush}" Stretch="Uniform"/>
                        </Border>
                        
                        <!-- Title -->
                        <TextBlock Text="Day Trader" FontSize="32" FontWeight="Bold" 
                                   Style="{StaticResource EnhancedHeaderTextBlockStyle}" 
                                   HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        
                        <TextBlock x:Name="FormTitleText" Text="Quantra Login" FontSize="18" FontWeight="SemiBold" 
                                   Style="{StaticResource EnhancedTextBlockStyle}" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        
                        <!-- Login/Registration Fields -->
                        <materialDesign:Card Background="#262638" UniformCornerRadius="6" 
                                           Margin="0,5,0,15" Padding="25,25" Width="320"
                                           materialDesign:ElevationAssist.Elevation="Dp2">
                            <StackPanel>
                                <!-- Status Message -->
                                <TextBlock x:Name="StatusMessageText" 
                                          Text="{Binding StatusMessage}" 
                                          Style="{StaticResource EnhancedSmallTextBlockStyle}"
                                          Foreground="#FF6B6B"
                                          TextWrapping="Wrap"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,10"
                                          Visibility="{Binding StatusMessage, Converter={StaticResource BoolToVisConverter}, FallbackValue=Collapsed}"/>
                                
                                <!-- Username Field -->
                                <Grid Margin="0,0,0,5">
                                    <TextBlock Text="Username" Style="{StaticResource EnhancedSmallTextBlockStyle}" 
                                              Margin="2,0,0,0" 
                                              VerticalAlignment="Top"/>
                                    <TextBox x:Name="UsernameTextBox" 
                                            Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Style="{StaticResource EnhancedTextBoxStyle}" 
                                            GotFocus="UsernameTextBox_GotFocus" 
                                            KeyDown="UsernameTextBox_KeyDown" 
                                            Height="38" Width="240"
                                            Margin="0,18,0,0"/>
                                </Grid>
                                
                                <!-- Password Field -->
                                <Grid Margin="0,10,0,5">
                                    <TextBlock Text="Password" Style="{StaticResource EnhancedSmallTextBlockStyle}" 
                                              Margin="2,0,0,0" 
                                              VerticalAlignment="Top"/>
                                    <PasswordBox x:Name="PasswordBox" Style="{StaticResource EnhancedPasswordBoxStyle}" 
                                               KeyDown="PasswordBox_KeyDown"
                                               Height="38" Width="240"
                                               Margin="0,18,0,0"/>
                                </Grid>
                                
                                <!-- Confirm Password Field (Registration only) -->
                                <Grid x:Name="ConfirmPasswordContainer" Margin="0,10,0,5" Visibility="Collapsed">
                                    <TextBlock Text="Confirm Password" Style="{StaticResource EnhancedSmallTextBlockStyle}" 
                                              Margin="2,0,0,0" 
                                              VerticalAlignment="Top"/>
                                    <PasswordBox x:Name="ConfirmPasswordBox" Style="{StaticResource EnhancedPasswordBoxStyle}" 
                                               Height="38" Width="240"
                                               Margin="0,18,0,0"/>
                                </Grid>
                                
                                <!-- Email Field (Registration only) -->
                                <Grid x:Name="EmailContainer" Margin="0,10,0,5" Visibility="Collapsed">
                                    <TextBlock Text="Email (Optional)" Style="{StaticResource EnhancedSmallTextBlockStyle}" 
                                              Margin="2,0,0,0" 
                                              VerticalAlignment="Top"/>
                                    <TextBox x:Name="EmailTextBox" Style="{StaticResource EnhancedTextBoxStyle}" 
                                            Height="38" Width="240"
                                            Margin="0,18,0,0"/>
                                </Grid>
                                
                                <!-- Previously Logged-In Users (Login only) -->
                                <Grid x:Name="PreviousUsersContainer" Margin="0,10,0,5">
                                    <TextBlock Text="Previously Logged-In Users" Style="{StaticResource EnhancedSmallTextBlockStyle}" 
                                              Margin="2,0,0,0" 
                                              VerticalAlignment="Top"/>
                                    <ComboBox x:Name="PreviousUsersComboBox" Style="{StaticResource EnhancedComboBoxStyle}" 
                                            ItemsSource="{Binding PreviouslyLoggedInUsersList}"
                                            SelectedItem="{Binding SelectedPreviousUser, Mode=TwoWay}"
                                            Height="38" Width="240"
                                            Margin="0,18,0,0"
                                            ToolTip="Select a user who previously logged in to this app"/>
                                </Grid>
                                
                                <!-- Remember Me Checkbox (Login only) - Currently not functional, auto-remembers by LastLoginDate -->
                                <CheckBox x:Name="RememberMeCheckBox" Content="Remember this account (Auto-populated on restart)" 
                                         Style="{StaticResource EnhancedCheckBoxStyle}" 
                                         Margin="0,15,0,5"
                                         IsChecked="True"
                                         IsEnabled="False"
                                         ToolTip="Your username will be automatically populated on next login. You must re-enter your password for security."/>
                                
                                <!-- PIN Field - Hidden by default -->
                                <Grid x:Name="PinTextBoxContainer" Visibility="Collapsed" Margin="0,10,0,5">
                                    <TextBlock Text="PIN" Style="{StaticResource EnhancedSmallTextBlockStyle}" 
                                              Margin="2,0,0,0" 
                                              VerticalAlignment="Top"/>
                                    <TextBox x:Name="PinTextBox" Style="{StaticResource EnhancedTextBoxStyle}" 
                                           Text="PIN" Height="38" Width="240"
                                           Margin="0,18,0,0"/>
                                </Grid>
                                
                                <!-- Action Buttons -->
                                <Button x:Name="LoginButton" Content="Login" Style="{StaticResource EnhancedButtonStyle}" 
                                      Height="38" Width="120"
                                      Margin="0,20,0,5" Click="LoginButton_Click"/>
                                
                                <Button x:Name="RegisterButton" Content="Register" Style="{StaticResource EnhancedButtonStyle}" 
                                      Height="38" Width="120"
                                      Margin="0,5,0,5" Click="RegisterButton_Click"
                                      Visibility="Collapsed"/>
                                
                                <!-- Toggle between Login/Register mode -->
                                <Button x:Name="ToggleModeButton" Content="Create Account" 
                                      Style="{StaticResource EnhancedButtonStyle}" 
                                      Height="32" Width="140"
                                      Margin="0,10,0,5" Click="ToggleModeButton_Click"
                                      Background="Transparent" BorderThickness="0"/>
                                
                                <Button Content="Settings" Style="{StaticResource EnhancedButtonStyle}" 
                                      Height="38" Width="120"
                                      Click="SettingsButton_Click"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Resize Grips -->
                <Grid Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Rectangle x:Name="BottomLeftGrip" Grid.Column="0" Style="{StaticResource ResizeGripStyle}" 
                             HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                             Margin="6" Cursor="SizeNESW"
                             MouseDown="ResizeGrip_MouseDown"/>
                    
                    <Rectangle x:Name="BottomGrip" Grid.Column="1" Style="{StaticResource ResizeGripStyle}" 
                             HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                             Width="80" Margin="0,0,0,2" Cursor="SizeNS"
                             MouseDown="ResizeGrip_MouseDown"/>
                    
                    <Rectangle x:Name="BottomRightGrip" Grid.Column="2" Style="{StaticResource ResizeGripStyle}" 
                             HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                             Margin="6" Cursor="SizeNWSE"
                             MouseDown="ResizeGrip_MouseDown"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
