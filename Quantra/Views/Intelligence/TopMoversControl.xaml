<UserControl x:Class="Quantra.Views.Intelligence.TopMoversControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quantra.Views.Intelligence"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#1E1E30"
             MinWidth="400" MinHeight="300">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/EnhancedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Change Color Converter -->
            <local:ChangeColorConverter x:Key="ChangeColorConverter"/>
            <local:ChangeSignConverter x:Key="ChangeSignConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="Top Gainers/Losers" FontSize="22" 
                       FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
            
            <Button Grid.Column="1" x:Name="RefreshButton" Content="Refresh" Width="100" Height="30" 
                    Click="RefreshButton_Click"
                    Background="#3E3E56" Foreground="White" BorderBrush="Cyan"/>
        </Grid>
        
        <!-- Loading Indicator -->
        <ProgressBar Grid.Row="1" x:Name="LoadingIndicator" IsIndeterminate="True" 
                     Height="4" Margin="0,0,0,10"
                     Visibility="Collapsed" Foreground="Cyan"/>
        
        <!-- View Selection and Content Grid -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Radio Buttons for View Selection -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Left">
                <RadioButton x:Name="GainersRadioButton" Content="Top Gainers" 
                             IsChecked="True" Margin="0,0,15,0"
                             Foreground="White" FontSize="14"
                             Checked="ViewRadioButton_Checked"/>
                <RadioButton x:Name="LosersRadioButton" Content="Top Losers" 
                             Margin="0,0,15,0"
                             Foreground="White" FontSize="14"
                             Checked="ViewRadioButton_Checked"/>
                <RadioButton x:Name="MostActiveRadioButton" Content="Most Active" 
                             Foreground="White" FontSize="14"
                             Checked="ViewRadioButton_Checked"/>
            </StackPanel>
            
            <!-- Content Area with Border -->
            <Border Grid.Row="1" Background="#2D2D42" BorderBrush="#3E3E56" BorderThickness="1">
                <Grid>
                    <!-- Top Gainers Grid -->
                    <DataGrid x:Name="GainersGrid" 
                          AutoGenerateColumns="False"
                          Background="#2D2D42" Foreground="White"
                          BorderThickness="0"
                          RowBackground="#2D2D42"
                          AlternatingRowBackground="#262638"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#3E3E56"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          MouseDoubleClick="DataGrid_MouseDoubleClick"
                          ColumnHeaderStyle="{StaticResource EnhancedDataGridColumnHeaderStyle}"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Top"
                          Margin="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Symbol" Binding="{Binding Ticker}" Width="*" MinWidth="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#1E90FF"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=\$\{0:F2\}}" Width="*" MinWidth="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Change" Binding="{Binding ChangeAmount, StringFormat='\{0:+0.00;-0.00\}'}" Width="*" MinWidth="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#50E070"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Change %" Binding="{Binding ChangePercentage, StringFormat='\{0:+0.00;-0.00\}%'}" Width="*" MinWidth="90">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#50E070"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Volume" Binding="{Binding Volume, StringFormat=\{0:N0\}}" Width="*" MinWidth="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#AAAAAA"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                    
                    <!-- Top Losers Grid -->
                    <DataGrid x:Name="LosersGrid" 
                          Visibility="Collapsed"
                          AutoGenerateColumns="False"
                          Background="#2D2D42" Foreground="White"
                          BorderThickness="0"
                          RowBackground="#2D2D42"
                          AlternatingRowBackground="#262638"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#3E3E56"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          MouseDoubleClick="DataGrid_MouseDoubleClick"
                          ColumnHeaderStyle="{StaticResource EnhancedDataGridColumnHeaderStyle}"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Top"
                          Margin="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Symbol" Binding="{Binding Ticker}" Width="*" MinWidth="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#1E90FF"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=\$\{0:F2\}}" Width="*" MinWidth="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Change" Binding="{Binding ChangeAmount, StringFormat='\{0:+0.00;-0.00\}'}" Width="*" MinWidth="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#FF6B6B"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Change %" Binding="{Binding ChangePercentage, StringFormat='\{0:+0.00;-0.00\}%'}" Width="*" MinWidth="90">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#FF6B6B"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Volume" Binding="{Binding Volume, StringFormat=\{0:N0\}}" Width="*" MinWidth="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#AAAAAA"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                    
                    <!-- Most Active Grid -->
                    <DataGrid x:Name="MostActiveGrid" 
                          Visibility="Collapsed"
                          AutoGenerateColumns="False"
                          Background="#2D2D42" Foreground="White"
                          BorderThickness="0"
                          RowBackground="#2D2D42"
                          AlternatingRowBackground="#262638"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#3E3E56"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          MouseDoubleClick="DataGrid_MouseDoubleClick"
                          ColumnHeaderStyle="{StaticResource EnhancedDataGridColumnHeaderStyle}"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Top"
                          Margin="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Symbol" Binding="{Binding Ticker}" Width="*" MinWidth="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#1E90FF"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=\$\{0:F2\}}" Width="*" MinWidth="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="Change" Width="*" MinWidth="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ChangeAmount, StringFormat='\{0:+0.00;-0.00\}'}" 
                                               Foreground="{Binding ChangeAmount, Converter={StaticResource ChangeColorConverter}}"
                                               FontWeight="SemiBold" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Change %" Width="*" MinWidth="90">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ChangePercentage, StringFormat='\{0:+0.00;-0.00\}%'}" 
                                               Foreground="{Binding ChangePercentage, Converter={StaticResource ChangeColorConverter}}"
                                               FontWeight="Bold" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Volume" Binding="{Binding Volume, StringFormat=\{0:N0\}}" Width="*" MinWidth="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="Cyan"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <TextBlock Grid.Row="3" x:Name="StatusText" Text="Loading market movers..." 
                   Foreground="#AAAAAA" Margin="0,10,0,0"/>
    </Grid>
</UserControl>
