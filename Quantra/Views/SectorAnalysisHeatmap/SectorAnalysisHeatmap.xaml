<UserControl x:Class="Quantra.Controls.SectorAnalysisHeatmapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quantra.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Quantra;component/Styles/EnhancedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header section -->
        <Border Grid.Row="0" Background="#FF1E1E30" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Sector Momentum Heatmap" 
                           Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                
                <ComboBox Name="TimeframeComboBox" Grid.Column="1" Margin="10,0,0,0"
                          Width="120" SelectedIndex="2" SelectionChanged="TimeframeComboBox_SelectionChanged"
                          Style="{StaticResource EnhancedComboBoxStyle}">
                    <ComboBoxItem Content="1 Day" Tag="1d"/>
                    <ComboBoxItem Content="1 Week" Tag="1w"/>
                    <ComboBoxItem Content="1 Month" Tag="1m"/>
                    <ComboBoxItem Content="3 Months" Tag="3m"/>
                    <ComboBoxItem Content="YTD" Tag="ytd"/>
                </ComboBox>
                
                <Button Grid.Column="2" Content="Refresh" Width="80" Margin="10,0,0,0"
                        Click="RefreshButton_Click" Style="{StaticResource EnhancedButtonStyle}"/>
            </Grid>
        </Border>

        <!-- Main heatmap area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid Name="HeatmapContainer" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Legend -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Margin="0,0,0,15">
                    <TextBlock Text="Strong Negative" Style="{StaticResource EnhancedTextBlockStyle}" Margin="5,0"/>
                    <Border Width="20" Height="20" Background="#FFB71C1C" Margin="2,0"/>
                    <Border Width="20" Height="20" Background="#FFD32F2F" Margin="2,0"/>
                    <Border Width="20" Height="20" Background="#FFE53935" Margin="2,0"/>
                    <Border Width="20" Height="20" Background="#FF9E9D24" Margin="2,0"/>
                    <Border Width="20" Height="20" Background="#FF7CB342" Margin="2,0"/>
                    <Border Width="20" Height="20" Background="#FF43A047" Margin="2,0"/>
                    <Border Width="20" Height="20" Background="#FF388E3C" Margin="2,0"/>
                    <TextBlock Text="Strong Positive" Style="{StaticResource EnhancedTextBlockStyle}" Margin="5,0"/>
                </StackPanel>
                
                <!-- Heatmap Grid - Will be populated in code-behind -->
                <UniformGrid Name="HeatmapGrid" Grid.Row="1" Rows="0" Columns="0"/>
            </Grid>
        </ScrollViewer>

        <!-- Status bar -->
        <Border Grid.Row="2" Background="#FF1E1E30" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Name="StatusText" Text="Ready" Style="{StaticResource EnhancedTextBlockStyle}"/>
                <TextBlock Grid.Column="1" Name="LastUpdatedText" Text="Last updated: Never" 
                           Style="{StaticResource EnhancedSmallTextBlockStyle}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
