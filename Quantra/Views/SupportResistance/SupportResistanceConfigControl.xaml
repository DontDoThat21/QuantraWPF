<UserControl x:Class="Quantra.Views.SupportResistance.SupportResistanceConfigControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quantra.Views.SupportResistance"
             xmlns:converters="clr-namespace:Quantra.Views.SupportResistance.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Quantra;component/Styles/EnhancedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:BoolToSupportResistanceConverter x:Key="BoolToSupportText" TypeText="Support"/>
            <converters:BoolToSupportResistanceConverter x:Key="BoolToResistanceText" TypeText="Resistance"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Settings Header -->
        <TextBlock Grid.Row="0" Text="Support/Resistance Level Detection Settings" 
                   Style="{StaticResource EnhancedHeaderTextBlockStyle}" Margin="0,0,0,10"/>

        <!-- Detection Method Settings -->
        <GroupBox Grid.Row="1" Header="Detection Methods" Margin="0,5" Padding="5">
            <StackPanel>
                <CheckBox Content="Price Action (Swing Highs/Lows)" 
                          IsChecked="{Binding UsePriceAction}" Margin="0,5" Style="{StaticResource EnhancedCheckBoxStyle}"/>
                <CheckBox Content="Pivot Points (Standard, Woodie's, Camarilla)" 
                          IsChecked="{Binding UsePivotPoints}" Margin="0,5" Style="{StaticResource EnhancedCheckBoxStyle}"/>
                <CheckBox Content="Fibonacci Retracements" 
                          IsChecked="{Binding UseFibonacciLevels}" Margin="0,5" Style="{StaticResource EnhancedCheckBoxStyle}"/>
                <CheckBox Content="Volume Profile" 
                          IsChecked="{Binding UseVolumeProfile}" Margin="0,5" Style="{StaticResource EnhancedCheckBoxStyle}"/>
            </StackPanel>
        </GroupBox>

        <!-- General Settings -->
        <GroupBox Grid.Row="2" Header="General Settings" Margin="0,5" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Lookback Period -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Lookback Periods:" 
                           Margin="0,5,10,5" VerticalAlignment="Center" Style="{StaticResource EnhancedTextBlockStyle}"/>
                <Slider Grid.Row="0" Grid.Column="1" Minimum="20" Maximum="200" 
                        Value="{Binding LookbackPeriods}" 
                        TickFrequency="10" IsSnapToTickEnabled="True"
                        VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="2" Width="40" 
                         Text="{Binding LookbackPeriods, UpdateSourceTrigger=PropertyChanged}" 
                         VerticalAlignment="Center" Style="{StaticResource EnhancedTextBoxStyle}"/>
                
                <!-- Min Touches -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Min Touches to Confirm:" 
                           Margin="0,5,10,5" VerticalAlignment="Center" Style="{StaticResource EnhancedTextBlockStyle}"/>
                <Slider Grid.Row="1" Grid.Column="1" Minimum="1" Maximum="5" 
                        Value="{Binding MinTouchesToConfirm}" 
                        TickFrequency="1" IsSnapToTickEnabled="True"
                        VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="2" Width="40" 
                         Text="{Binding MinTouchesToConfirm, UpdateSourceTrigger=PropertyChanged}" 
                         VerticalAlignment="Center" Style="{StaticResource EnhancedTextBoxStyle}"/>
                
                <!-- Level Tolerance -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Level Tolerance (%):" 
                           Margin="0,5,10,5" VerticalAlignment="Center" Style="{StaticResource EnhancedTextBlockStyle}"/>
                <Slider Grid.Row="2" Grid.Column="1" Minimum="0.1" Maximum="2.0" 
                        Value="{Binding LevelTolerance}" 
                        TickFrequency="0.1" IsSnapToTickEnabled="True"
                        VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="2" Width="40" 
                         Text="{Binding LevelTolerance, UpdateSourceTrigger=PropertyChanged, StringFormat=N1}" 
                         VerticalAlignment="Center" Style="{StaticResource EnhancedTextBoxStyle}"/>
            </Grid>
        </GroupBox>

        <!-- Breakout Settings -->
        <GroupBox Grid.Row="3" Header="Breakout Settings" Margin="0,5" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Breakout Confirmation -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Breakout Confirmation (Candles):" 
                           Margin="0,5,10,5" VerticalAlignment="Center" Style="{StaticResource EnhancedTextBlockStyle}"/>
                <Slider Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="5" 
                        Value="{Binding BreakoutConfirmation}" 
                        TickFrequency="1" IsSnapToTickEnabled="True"
                        VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="2" Width="40" 
                         Text="{Binding BreakoutConfirmation, UpdateSourceTrigger=PropertyChanged}" 
                         VerticalAlignment="Center" Style="{StaticResource EnhancedTextBoxStyle}"/>
                
                <!-- Volume Confirmation -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Use Volume Confirmation:" 
                           Margin="0,5,10,5" VerticalAlignment="Center" Style="{StaticResource EnhancedTextBlockStyle}"/>
                <CheckBox Grid.Row="1" Grid.Column="1" 
                          IsChecked="{Binding UseVolumeConfirmation}" 
                          VerticalAlignment="Center" Style="{StaticResource EnhancedCheckBoxStyle}"/>
                
                <!-- Volume Threshold -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Volume Threshold (x avg):" 
                           Margin="0,5,10,5" VerticalAlignment="Center" Style="{StaticResource EnhancedTextBlockStyle}"/>
                <Slider Grid.Row="2" Grid.Column="1" Minimum="1.0" Maximum="3.0" 
                        Value="{Binding VolumeThreshold}" 
                        TickFrequency="0.1" IsSnapToTickEnabled="True"
                        IsEnabled="{Binding UseVolumeConfirmation}"
                        VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="2" Width="40" 
                         Text="{Binding VolumeThreshold, UpdateSourceTrigger=PropertyChanged, StringFormat=N1}" 
                         IsEnabled="{Binding UseVolumeConfirmation}"
                         VerticalAlignment="Center" Style="{StaticResource EnhancedTextBoxStyle}"/>
            </Grid>
        </GroupBox>

        <!-- Detected Levels Preview (optional) -->
        <GroupBox Grid.Row="4" Header="Detected Levels" Margin="0,5" Padding="5">
            <ListView Name="LevelsListView" Height="100" 
                      ItemsSource="{Binding DetectedLevels}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Price" 
                                        DisplayMemberBinding="{Binding Price, StringFormat=N2}" 
                                        Width="80"/>
                        <GridViewColumn Header="Type" 
                                        Width="120">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0}{1}">
                                                <Binding Path="IsSupport" Converter="{StaticResource BoolToSupportText}"/>
                                                <Binding Path="IsResistance" Converter="{StaticResource BoolToResistanceText}"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Method" 
                                        DisplayMemberBinding="{Binding DetectionMethod}" 
                                        Width="100"/>
                        <GridViewColumn Header="Strength" 
                                        DisplayMemberBinding="{Binding Strength, StringFormat=P0}" 
                                        Width="70"/>
                        <GridViewColumn Header="Description" 
                                        DisplayMemberBinding="{Binding Description}" 
                                        Width="120"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Apply Settings" Width="100" Height="30" Click="ApplySettings_Click" Margin="0,0,10,0" Style="{StaticResource EnhancedButtonStyle}"/>
            <Button Content="Reset Defaults" Width="100" Height="30" Click="ResetDefaults_Click" Style="{StaticResource EnhancedButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>