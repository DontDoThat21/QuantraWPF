<UserControl x:Class="Quantra.Views.Backtesting.MultiStrategyComparisonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             Background="#23233A"
             Loaded="MultiStrategyComparisonControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Quantra;component/Styles/EnhancedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header and control panel -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="Multi-Strategy Comparison: " Style="{StaticResource EnhancedHeaderTextBlockStyle}" VerticalAlignment="Center"/>
                <TextBlock x:Name="SymbolText" Text="Symbol" Style="{StaticResource EnhancedTextBlockStyle}" VerticalAlignment="Center"/>
                <TextBlock Text=" | " VerticalAlignment="Center" Style="{StaticResource EnhancedTextBlockStyle}"/>
                <TextBlock x:Name="DateRangeText" Text="Date Range" Style="{StaticResource EnhancedTextBlockStyle}" VerticalAlignment="Center"/>
            </StackPanel>
            
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button x:Name="AddStrategyButton" Content="Add Strategy" Margin="5,0" Padding="5" Click="AddStrategyButton_Click"/>
                <Button x:Name="OptimizeWeightsButton" Content="Optimize Portfolio" Margin="5,0" Padding="5" Click="OptimizeWeightsButton_Click"/>
                <Button x:Name="ExportResultsButton" Content="Export Results" Margin="5,0" Padding="5" Click="ExportResultsButton_Click"/>
            </StackPanel>
        </Grid>
        
        <!-- Main content area -->
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Performance Comparison">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Strategy selection panel -->
                    <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1" Padding="5" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Select Strategies to Compare:" VerticalAlignment="Center" Style="{StaticResource EnhancedTextBlockStyle}"/>
                            <ItemsControl x:Name="StrategyCheckBoxPanel" Grid.Column="1">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding StrategyName}" 
                                                  IsChecked="{Binding IsSelected}" 
                                                  Style="{StaticResource EnhancedCheckBoxStyle}"
                                                  Checked="StrategyCheckBox_Changed"
                                                  Unchecked="StrategyCheckBox_Changed"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                    
                    <!-- Performance charts -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Equity curves chart -->
                        <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" Margin="0,0,5,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Text="Equity Curves" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                                
                                <lvc:CartesianChart Grid.Row="1" x:Name="EquityCurvesChart"
                                                    DisableAnimations="True"
                                                    Background="#23233A" Foreground="White">
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis Title="Equity Value">
                                            <lvc:Axis.Separator>
                                                <lvc:Separator StrokeThickness="1" StrokeDashArray="4" Stroke="LightGray"/>
                                            </lvc:Axis.Separator>
                                        </lvc:Axis>
                                    </lvc:CartesianChart.AxisY>
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis Title="Date" LabelsRotation="45">
                                            <lvc:Axis.Separator>
                                                <lvc:Separator StrokeThickness="1" StrokeDashArray="4" Stroke="LightGray"/>
                                            </lvc:Axis.Separator>
                                        </lvc:Axis>
                                    </lvc:CartesianChart.AxisX>
                                    <lvc:CartesianChart.DataTooltip>
                                        <lvc:DefaultTooltip SelectionMode="SharedYValues"/>
                                    </lvc:CartesianChart.DataTooltip>
                                </lvc:CartesianChart>
                            </Grid>
                        </Border>
                        
                        <!-- Best strategy summary -->
                        <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1" Margin="5,0,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Text="Best Strategy" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                                
                                <Border Grid.Row="1" Background="#2D6A4C" CornerRadius="5" Padding="10">
                                    <StackPanel>
                                        <TextBlock x:Name="BestStrategyNameText" Text="Strategy Name" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                                        <TextBlock x:Name="BestStrategyTypeText" Text="Strategy Type" Style="{StaticResource EnhancedSmallTextBlockStyle}"/>
                                    </StackPanel>
                                </Border>
                                
                                <Grid Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Best strategy metrics -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Return:" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="BestStrategyReturnText" Text="0.00%" HorizontalAlignment="Right" Style="{StaticResource EnhancedTextBlockStyle}"/>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="CAGR:" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="BestStrategyCagrText" Text="0.00%" HorizontalAlignment="Right" Style="{StaticResource EnhancedTextBlockStyle}"/>
                                    
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Max Drawdown:" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="BestStrategyDrawdownText" Text="0.00%" HorizontalAlignment="Right" Style="{StaticResource EnhancedTextBlockStyle}"/>
                                    
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Sharpe Ratio:" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="BestStrategySharpeText" Text="0.00" HorizontalAlignment="Right" Style="{StaticResource EnhancedTextBlockStyle}"/>
                                    
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Sortino Ratio:" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" x:Name="BestStrategySortinoText" Text="0.00" HorizontalAlignment="Right" Style="{StaticResource EnhancedTextBlockStyle}"/>
                                    
                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Win Rate:" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" x:Name="BestStrategyWinRateText" Text="0.00%" HorizontalAlignment="Right" Style="{StaticResource EnhancedTextBlockStyle}"/>
                                    
                                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Profit Factor:" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                                    <TextBlock Grid.Row="6" Grid.Column="1" x:Name="BestStrategyProfitFactorText" Text="0.00" HorizontalAlignment="Right" Style="{StaticResource EnhancedTextBlockStyle}"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                    
                    <!-- Performance metrics header -->
                    <TextBlock Grid.Row="2" Text="Strategy Performance Metrics" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                    
                    <!-- Performance metrics grid -->
                    <DataGrid Grid.Row="3" x:Name="PerformanceMetricsGrid" 
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Foreground="White"
                              Background="#23233A"
                              RowBackground="#23233A"
                              AlternatingRowBackground="#26264A"
                              HeadersVisibility="Column"
                              ColumnHeaderStyle="{StaticResource EnhancedDataGridColumnHeaderStyle}"
                              RowStyle="{StaticResource EnhancedDataGridRowStyle}"
                              CellStyle="{StaticResource EnhancedDataGridCellStyle}"
                              HorizontalGridLinesBrush="#3E3E56"
                              VerticalGridLinesBrush="#3E3E56">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Strategy" Binding="{Binding StrategyName}" Width="*"/>
                            <DataGridTextColumn Header="Total Return" Binding="{Binding TotalReturn}" Width="Auto"/>
                            <DataGridTextColumn Header="CAGR" Binding="{Binding CAGR}" Width="Auto"/>
                            <DataGridTextColumn Header="Max Drawdown" Binding="{Binding MaxDrawdown}" Width="Auto"/>
                            <DataGridTextColumn Header="Sharpe Ratio" Binding="{Binding SharpeRatio}" Width="Auto"/>
                            <DataGridTextColumn Header="Sortino Ratio" Binding="{Binding SortinoRatio}" Width="Auto"/>
                            <DataGridTextColumn Header="Win Rate" Binding="{Binding WinRate}" Width="Auto"/>
                            <DataGridTextColumn Header="Profit Factor" Binding="{Binding ProfitFactor}" Width="Auto"/>
                            <DataGridTextColumn Header="Consistency" Binding="{Binding Consistency}" Width="Auto"/>
                            <DataGridTextColumn Header="Volatility" Binding="{Binding Volatility}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            
            <TabItem Header="Correlation Analysis">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Correlation Matrix -->
                    <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="Strategy Correlation Matrix" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                            
                            <DataGrid Grid.Row="1" x:Name="CorrelationMatrixGrid" 
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      Foreground="White"
                                      Background="#23233A"
                                      RowBackground="#23233A"
                                      AlternatingRowBackground="#26264A"
                                      HeadersVisibility="Column"
                                      ColumnHeaderStyle="{StaticResource EnhancedDataGridColumnHeaderStyle}"
                                      RowStyle="{StaticResource EnhancedDataGridRowStyle}"
                                      CellStyle="{StaticResource EnhancedDataGridCellStyle}"
                                      HorizontalGridLinesBrush="#3E3E56"
                                      VerticalGridLinesBrush="#3E3E56">
                            </DataGrid>
                        </Grid>
                    </Border>
                    
                    <!-- Correlation Heatmap -->
                    <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="Strategy Correlation Heatmap" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                            
                            <Canvas x:Name="CorrelationHeatmapCanvas" Grid.Row="1"/>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            
            <TabItem Header="Drawdown Analysis">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Drawdown Comparison Chart -->
                    <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="Drawdown Comparison" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                            
                            <lvc:CartesianChart Grid.Row="1" x:Name="DrawdownComparisonChart"
                                               DisableAnimations="True"
                                               Background="#23233A" Foreground="White">
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis Title="Drawdown" LabelFormatter="{Binding DrawdownFormatter}">
                                        <lvc:Axis.Separator>
                                            <lvc:Separator StrokeThickness="1" StrokeDashArray="4" Stroke="LightGray"/>
                                        </lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisY>
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis Title="Date" LabelsRotation="45">
                                        <lvc:Axis.Separator>
                                            <lvc:Separator StrokeThickness="1" StrokeDashArray="4" Stroke="LightGray"/>
                                        </lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisX>
                                <lvc:CartesianChart.DataTooltip>
                                    <lvc:DefaultTooltip SelectionMode="SharedYValues"/>
                                </lvc:CartesianChart.DataTooltip>
                            </lvc:CartesianChart>
                        </Grid>
                    </Border>
                    
                    <!-- Max Drawdown Comparison -->
                    <TextBlock Grid.Row="1" Text="Maximum Drawdown Comparison" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                    
                    <!-- Max Drawdown Chart -->
                    <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="1" Margin="5">
                        <lvc:CartesianChart x:Name="MaxDrawdownComparisonChart"
                                           DisableAnimations="True"
                                           Background="#23233A" Foreground="White">
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="Maximum Drawdown" LabelFormatter="{Binding DrawdownFormatter}">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator StrokeThickness="1" StrokeDashArray="4" Stroke="LightGray"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Title="Strategy" LabelsRotation="0">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator StrokeThickness="1" StrokeDashArray="4" Stroke="LightGray"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                        </lvc:CartesianChart>
                    </Border>
                </Grid>
            </TabItem>
            
            <TabItem Header="Portfolio Optimization">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Portfolio settings -->
                    <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1" Margin="5" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Risk Aversion: " VerticalAlignment="Center" Style="{StaticResource EnhancedTextBlockStyle}"/>
                            <Slider Grid.Column="1" x:Name="RiskAversionSlider" 
                                    Width="200" 
                                    Minimum="0.1" 
                                    Maximum="3.0" 
                                    Value="1.0" 
                                    TickFrequency="0.1" 
                                    IsSnapToTickEnabled="True" 
                                    VerticalAlignment="Center"
                                    ValueChanged="RiskAversionSlider_ValueChanged"/>
                            <TextBlock Grid.Column="2" x:Name="RiskAversionValueText" Text="1.0" VerticalAlignment="Center" Style="{StaticResource EnhancedTextBlockStyle}"/>
                            
                            <Button Grid.Column="4" x:Name="RecalculatePortfolioButton" 
                                    Content="Recalculate Portfolio" 
                                    Click="RecalculatePortfolioButton_Click"/>
                        </Grid>
                    </Border>
                    
                    <!-- Portfolio allocation chart -->
                    <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="Optimal Portfolio Allocation" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                            
                            <lvc:PieChart Grid.Row="1" x:Name="PortfolioAllocationChart"
                                         LegendLocation="Right">
                            </lvc:PieChart>
                        </Grid>
                    </Border>
                    
                    <!-- Portfolio performance vs individual strategies -->
                    <TextBlock Grid.Row="2" Text="Combined Portfolio Performance" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                    
                    <Border Grid.Row="3" BorderBrush="LightGray" BorderThickness="1" Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Combined equity curve chart -->
                            <lvc:CartesianChart Grid.Column="0" x:Name="CombinedEquityCurveChart"
                                              DisableAnimations="True"
                                              Background="#23233A" Foreground="White">
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis Title="Equity Value">
                                        <lvc:Axis.Separator>
                                            <lvc:Separator StrokeThickness="1" StrokeDashArray="4" Stroke="LightGray"/>
                                        </lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisY>
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis Title="Date" LabelsRotation="45">
                                        <lvc:Axis.Separator>
                                            <lvc:Separator StrokeThickness="1" StrokeDashArray="4" Stroke="LightGray"/>
                                        </lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisX>
                                <lvc:CartesianChart.DataTooltip>
                                    <lvc:DefaultTooltip SelectionMode="SharedYValues"/>
                                </lvc:CartesianChart.DataTooltip>
                            </lvc:CartesianChart>
                            
                            <!-- Combined portfolio metrics -->
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                                           Text="Combined Portfolio Metrics" 
                                           Style="{StaticResource EnhancedHeaderTextBlockStyle}"
                                           HorizontalAlignment="Center"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Total Return:" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="CombinedReturnText" Text="0.00%" HorizontalAlignment="Right" Style="{StaticResource EnhancedTextBlockStyle}"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="CAGR:" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="CombinedCagrText" Text="0.00%" HorizontalAlignment="Right" Style="{StaticResource EnhancedTextBlockStyle}"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Max Drawdown:" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="CombinedDrawdownText" Text="0.00%" HorizontalAlignment="Right" Style="{StaticResource EnhancedTextBlockStyle}"/>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Sharpe Ratio:" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="CombinedSharpeText" Text="0.00" HorizontalAlignment="Right" Style="{StaticResource EnhancedTextBlockStyle}"/>
                                
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Sortino Ratio:" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" x:Name="CombinedSortinoText" Text="0.00" HorizontalAlignment="Right" Style="{StaticResource EnhancedTextBlockStyle}"/>
                                
                                <TextBlock Grid.Row="6" Grid.Column="0" Text="Calmar Ratio:" Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                                <TextBlock Grid.Row="6" Grid.Column="1" x:Name="CombinedCalmarText" Text="0.00" HorizontalAlignment="Right" Style="{StaticResource EnhancedTextBlockStyle}"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>