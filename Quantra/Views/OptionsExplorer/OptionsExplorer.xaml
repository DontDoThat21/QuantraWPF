<UserControl x:Class="Quantra.Views.OptionsExplorer.OptionsExplorer"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:converters="clr-namespace:Quantra.Converters"
mc:Ignorable="d" 
d:DesignHeight="800" d:DesignWidth="1400">
    
    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:NullToCollapsedConverter x:Key="NullToCollapsedConverter"/>
        <converters:OptionMoneynessColorConverter x:Key="MoneynessColorConverter"/>
        <converters:GreekValueColorConverter x:Key="GreekColorConverter"/>
        
        <!-- Style for DataGrid headers -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>

        <!-- Style for DataGrid cells -->
        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for DataGrid rows with moneyness highlighting -->
        <Style x:Key="OptionsDataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="{Binding Converter={StaticResource MoneynessColorConverter}}"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Converter for ITM/OTM background color (legacy brushes for reference) -->
        <SolidColorBrush x:Key="ITMBrush" Color="#2D5016"/>
        <SolidColorBrush x:Key="OTMBrush" Color="#4D1F1F"/>
        <SolidColorBrush x:Key="ATMBrush" Color="#4D4D00"/>
    </UserControl.Resources>

    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="Auto"/>
            <!-- Symbol info -->
            <RowDefinition Height="*"/>
            <!-- Main content -->
            <RowDefinition Height="Auto"/>
            <!-- Status bar -->
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="0,0,0,1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Symbol:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="White"/>
                <TextBox x:Name="SymbolTextBox" Width="100" Height="25" 
                         Text="{Binding Symbol, UpdateSourceTrigger=PropertyChanged}"
                         Background="#3E3E42" Foreground="White" BorderBrush="#555" 
                         VerticalContentAlignment="Center" Padding="5"/>
                
                <Button Content="Load" Width="80" Height="25" Margin="10,0,0,0"
                        Command="{Binding LoadSymbolCommand}"
                        Style="{StaticResource {x:Type Button}}"/>
                
                <Button Content="Refresh" Width="80" Height="25" Margin="10,0,0,0"
                        Command="{Binding RefreshDataCommand}"
                        Style="{StaticResource {x:Type Button}}"/>
                
                <Separator Width="20" Visibility="Hidden"/>
                
                <TextBlock Text="Expiration:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="White"/>
                <ComboBox Width="150" Height="25"
                          ItemsSource="{Binding ExpirationDates}"
                          SelectedItem="{Binding SelectedExpiration}"
                          DisplayMemberPath="{}{0:MMM dd, yyyy}"
                          Background="#3E3E42" Foreground="White" BorderBrush="#555"/>
                
                <Button Content="Build IV Surface" Width="120" Height="25" Margin="20,0,0,0"
                        Command="{Binding BuildIVSurfaceCommand}"
                        Style="{StaticResource {x:Type Button}}"/>
                
                <ProgressBar Width="100" Height="20" Margin="20,0,0,0"
                             IsIndeterminate="{Binding IsLoading}"
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>
        </Border>

        <!-- Symbol Info Panel -->
        <Border Grid.Row="1" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock FontSize="18" FontWeight="Bold" Foreground="White">
                        <Run Text="{Binding Symbol}"/>
                    </TextBlock>
                    <TextBlock FontSize="18" Margin="15,0,0,0" Foreground="LightGray">
                        <Run Text="$"/>
                        <Run Text="{Binding CurrentPrice, StringFormat=N2}"/>
                    </TextBlock>
                </StackPanel>

                <!-- IV Skew Info -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Visibility="{Binding IVSkew, Converter={StaticResource NullToCollapsedConverter}}">
                    <TextBlock Text="ATM IV:" Margin="0,0,5,0" Foreground="LightGray"/>
                    <TextBlock Text="{Binding IVSkew.ATMVolatility, StringFormat=P2}" FontWeight="Bold" Foreground="Yellow"/>
                    
                    <TextBlock Text="Skew:" Margin="20,0,5,0" Foreground="LightGray"/>
                    <TextBlock Text="{Binding IVSkew.SkewDirection}" FontWeight="Bold" Foreground="Cyan"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Options Chain -->
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <!-- Details & Portfolio -->
            </Grid.ColumnDefinitions>

            <!-- Options Chain -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Options Chain" FontSize="16" FontWeight="Bold" 
                           Foreground="White" Margin="10,10,10,5"/>

                <!-- Calls Grid -->
                <Border Grid.Row="1" Margin="10,0,5,5" BorderBrush="#3E3E42" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="CALLS" FontWeight="Bold" Foreground="LightGreen" 
                                   Background="#2D2D30" Padding="5"/>
                        
                        <DataGrid Grid.Row="1" ItemsSource="{Binding CallOptions}" 
                                  SelectedItem="{Binding SelectedOption}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                                  CellStyle="{StaticResource DataGridCellStyle}"
                                  RowStyle="{StaticResource OptionsDataGridRowStyle}"
                                  Background="#1E1E1E"
                                  Foreground="White">
                            
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Strike" Binding="{Binding StrikePrice, StringFormat=N2}" Width="70">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Last" Binding="{Binding LastPrice, StringFormat=N2}" Width="60">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Bid" Binding="{Binding Bid, StringFormat=N2}" Width="55">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Ask" Binding="{Binding Ask, StringFormat=N2}" Width="55">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Vol" Binding="{Binding Volume, StringFormat=N0}" Width="65">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="OI" Binding="{Binding OpenInterest, StringFormat=N0}" Width="65">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="IV" Binding="{Binding ImpliedVolatility, StringFormat=P1}" Width="60">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Yellow"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="?" Binding="{Binding Delta, StringFormat=N3}" Width="60">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Cyan"/>
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="?" Binding="{Binding Gamma, StringFormat=N4}" Width="55">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Cyan"/>
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="?" Binding="{Binding Theta, StringFormat=N3}" Width="55">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Cyan"/>
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="?" Binding="{Binding Vega, StringFormat=N3}" Width="55">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Cyan"/>
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTemplateColumn Header="Action" Width="70">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Add" Command="{Binding DataContext.AddToPortfolioCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Background="#007ACC" Foreground="White" BorderThickness="0" 
                                                    Padding="6,2" Cursor="Hand" FontSize="11"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- Puts Grid -->
                <Border Grid.Row="2" Margin="10,5,5,10" BorderBrush="#3E3E42" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="PUTS" FontWeight="Bold" Foreground="#FF6B6B" 
                                   Background="#2D2D30" Padding="5"/>
                        
                        <DataGrid Grid.Row="1" ItemsSource="{Binding PutOptions}"
                                  SelectedItem="{Binding SelectedOption}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                                  CellStyle="{StaticResource DataGridCellStyle}"
                                  RowStyle="{StaticResource OptionsDataGridRowStyle}"
                                  Background="#1E1E1E"
                                  Foreground="White">
                            
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Strike" Binding="{Binding StrikePrice, StringFormat=N2}" Width="70">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Last" Binding="{Binding LastPrice, StringFormat=N2}" Width="60">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Bid" Binding="{Binding Bid, StringFormat=N2}" Width="55">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Ask" Binding="{Binding Ask, StringFormat=N2}" Width="55">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Vol" Binding="{Binding Volume, StringFormat=N0}" Width="65">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="OI" Binding="{Binding OpenInterest, StringFormat=N0}" Width="65">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="IV" Binding="{Binding ImpliedVolatility, StringFormat=P1}" Width="60">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Yellow"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="?" Binding="{Binding Delta, StringFormat=N3}" Width="60">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Cyan"/>
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="?" Binding="{Binding Gamma, StringFormat=N4}" Width="55">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Cyan"/>
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="?" Binding="{Binding Theta, StringFormat=N3}" Width="55">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Cyan"/>
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="?" Binding="{Binding Vega, StringFormat=N3}" Width="55">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Cyan"/>
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTemplateColumn Header="Action" Width="70">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Add" Command="{Binding DataContext.AddToPortfolioCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Background="#007ACC" Foreground="White" BorderThickness="0" 
                                                    Padding="6,2" Cursor="Hand" FontSize="11"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="#3E3E42"/>

            <!-- Right Panel: Details & Portfolio -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Selected Option Details -->
                <Border Grid.Row="0" Margin="5,10,10,5" BorderBrush="#3E3E42" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Option Details" FontWeight="Bold" Foreground="White" 
                                   Background="#2D2D30" Padding="5"/>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="10" Visibility="{Binding SelectedOption, Converter={StaticResource NullToCollapsedConverter}}">
                                <TextBlock Foreground="LightGray" Margin="0,0,0,10">
                                    <Run Text="{Binding SelectedOption.OptionType}" FontWeight="Bold"/>
                                    <Run Text=" $"/>
                                    <Run Text="{Binding SelectedOption.StrikePrice, StringFormat=N2}"/>
                                    <Run Text=" exp "/>
                                    <Run Text="{Binding SelectedOption.ExpirationDate, StringFormat=MM/dd/yyyy}"/>
                                </TextBlock>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Last Price:" Foreground="Gray" Margin="0,5"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedOption.LastPrice, StringFormat=N2}" Foreground="White" HorizontalAlignment="Right" Margin="0,5"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Mid Price:" Foreground="Gray" Margin="0,5"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedOption.MidPrice, StringFormat=N2}" Foreground="White" HorizontalAlignment="Right" Margin="0,5"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Intrinsic:" Foreground="Gray" Margin="0,5"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedOption.Intrinsic, StringFormat=N2}" Foreground="LightGreen" HorizontalAlignment="Right" Margin="0,5"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Extrinsic:" Foreground="Gray" Margin="0,5"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedOption.Extrinsic, StringFormat=N2}" Foreground="Orange" HorizontalAlignment="Right" Margin="0,5"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="IV:" Foreground="Gray" Margin="0,5"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedOption.ImpliedVolatility, StringFormat=P2}" Foreground="Yellow" HorizontalAlignment="Right" Margin="0,5"/>

                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Delta:" Foreground="Gray" Margin="0,5"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding SelectedOption.Delta, StringFormat=N3}" Foreground="Cyan" HorizontalAlignment="Right" Margin="0,5"/>

                                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Gamma:" Foreground="Gray" Margin="0,5"/>
                                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding SelectedOption.Gamma, StringFormat=N4}" Foreground="Cyan" HorizontalAlignment="Right" Margin="0,5"/>

                                    <TextBlock Grid.Row="7" Grid.Column="0" Text="Theta:" Foreground="Gray" Margin="0,5"/>
                                    <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding SelectedOption.Theta, StringFormat=N3}" Foreground="Cyan" HorizontalAlignment="Right" Margin="0,5"/>

                                    <TextBlock Grid.Row="8" Grid.Column="0" Text="Vega:" Foreground="Gray" Margin="0,5"/>
                                    <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding SelectedOption.Vega, StringFormat=N3}" Foreground="Cyan" HorizontalAlignment="Right" Margin="0,5"/>

                                    <TextBlock Grid.Row="9" Grid.Column="0" Text="Volume:" Foreground="Gray" Margin="0,5"/>
                                    <TextBlock Grid.Row="9" Grid.Column="1" Text="{Binding SelectedOption.Volume, StringFormat=N0}" Foreground="White" HorizontalAlignment="Right" Margin="0,5"/>

                                    <TextBlock Grid.Row="10" Grid.Column="0" Text="Open Interest:" Foreground="Gray" Margin="0,5"/>
                                    <TextBlock Grid.Row="10" Grid.Column="1" Text="{Binding SelectedOption.OpenInterest, StringFormat=N0}" Foreground="White" HorizontalAlignment="Right" Margin="0,5"/>

                                    <TextBlock Grid.Row="11" Grid.Column="0" Text="Days to Exp:" Foreground="Gray" Margin="0,5"/>
                                    <TextBlock Grid.Row="11" Grid.Column="1" Text="{Binding SelectedOption.DaysToExpiration, StringFormat=N0}" Foreground="White" HorizontalAlignment="Right" Margin="0,5"/>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="#3E3E42"/>

                <!-- Portfolio & Greeks -->
                <Border Grid.Row="2" Margin="5,5,10,10" BorderBrush="#3E3E42" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Portfolio" FontWeight="Bold" Foreground="White" 
                                   Background="#2D2D30" Padding="5"/>

                        <!-- Portfolio Greeks Summary -->
                        <Border Grid.Row="1" Background="#252526" Padding="10" Margin="5"
                                Visibility="{Binding PortfolioGreeks, Converter={StaticResource NullToCollapsedConverter}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="Delta" Foreground="Gray" FontSize="10"/>
                                    <TextBlock Text="{Binding PortfolioGreeks.Delta, StringFormat=N2}" Foreground="Cyan" FontWeight="Bold" FontSize="14"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1">
                                    <TextBlock Text="Gamma" Foreground="Gray" FontSize="10"/>
                                    <TextBlock Text="{Binding PortfolioGreeks.Gamma, StringFormat=N4}" Foreground="Cyan" FontWeight="Bold" FontSize="14"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="2">
                                    <TextBlock Text="Theta" Foreground="Gray" FontSize="10"/>
                                    <TextBlock Text="{Binding PortfolioGreeks.Theta, StringFormat=N2}" Foreground="Cyan" FontWeight="Bold" FontSize="14"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,10,0,0">
                                    <TextBlock Text="Vega" Foreground="Gray" FontSize="10"/>
                                    <TextBlock Text="{Binding PortfolioGreeks.Vega, StringFormat=N2}" Foreground="Cyan" FontWeight="Bold" FontSize="14"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,10,0,0">
                                    <TextBlock Text="Rho" Foreground="Gray" FontSize="10"/>
                                    <TextBlock Text="{Binding PortfolioGreeks.Rho, StringFormat=N3}" Foreground="Cyan" FontWeight="Bold" FontSize="14"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Portfolio Options List -->
                        <DataGrid Grid.Row="2" ItemsSource="{Binding PortfolioOptions}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                                  CellStyle="{StaticResource DataGridCellStyle}"
                                  Background="#1E1E1E"
                                  Foreground="White"
                                  RowBackground="#1E1E1E"
                                  AlternatingRowBackground="#252526"
                                  Margin="5">
                            
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Type" Binding="{Binding OptionType}" Width="50"/>
                                <DataGridTextColumn Header="Strike" Binding="{Binding StrikePrice, StringFormat=N2}" Width="70"/>
                                <DataGridTextColumn Header="Last" Binding="{Binding LastPrice, StringFormat=N2}" Width="60"/>
                                <DataGridTextColumn Header="Delta" Binding="{Binding Delta, StringFormat=N3}" Width="60"/>
                                
                                <DataGridTemplateColumn Header="" Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="X" Command="{Binding DataContext.RemoveFromPortfolioCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Background="#CC0000" Foreground="White" BorderThickness="0" 
                                                    Padding="5,2" Cursor="Hand" FontSize="10"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="0,1,0,0" Padding="10,5">
            <TextBlock Text="{Binding StatusMessage}" Foreground="LightGray" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
