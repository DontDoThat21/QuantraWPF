<UserControl x:Class="Quantra.Controls.TradingRulesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quantra.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#1E1E30">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title and Controls -->
            <RowDefinition Height="*"/>   <!-- Rules List -->
            <RowDefinition Height="Auto"/> <!-- Add New Rule -->
        </Grid.RowDefinitions>

        <!-- Title and Controls -->
        <Grid Grid.Row="0" Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="Trading Rules" FontSize="22" 
                       FontWeight="Bold" Foreground="White" Margin="5,0,0,10"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBox x:Name="SearchBox" Width="200" Height="30" Margin="0,0,5,0" 
                         KeyUp="SearchBox_KeyUp" 
                         Background="#2D2D42" Foreground="White" 
                         BorderBrush="#3E3E56"/>
                <Button x:Name="RefreshButton" Content="↻" Width="40" Height="30" 
                        Click="RefreshButton_Click"
                        Background="#3E3E56" Foreground="White" 
                        BorderBrush="Cyan" Margin="0,0,5,0"/>
            </StackPanel>
        </Grid>

        <!-- Rules List -->
        <DataGrid x:Name="RulesDataGrid" Grid.Row="1" Margin="0,5" 
                  AutoGenerateColumns="False" 
                  Background="#2D2D42" Foreground="White" 
                  BorderBrush="#3E3E56" AlternatingRowBackground="#3E3E56"
                  SelectionChanged="RulesDataGrid_SelectionChanged"
                  CanUserAddRows="False" CanUserDeleteRows="False"
                  IsReadOnly="True">
            <DataGrid.Resources>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                            <Setter Property="Background" Value="#45456A"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding OrderType}" Value="SELL">
                            <Setter Property="Background" Value="#4A3030"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="120"/>
                <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" Width="80"/>
                <DataGridTextColumn Header="Order Type" Binding="{Binding OrderType}" Width="90"/>
                <DataGridTextColumn Header="Entry Price" Binding="{Binding EntryPrice, StringFormat=\${0:F2}}" Width="90"/>
                <DataGridTextColumn Header="Exit Price" Binding="{Binding ExitPrice, StringFormat=\${0:F2}}" Width="90"/>
                <DataGridTextColumn Header="Stop Loss" Binding="{Binding StopLoss, StringFormat=\${0:F2}}" Width="90"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="70"/>
                <DataGridTextColumn Header="Timeframe" Binding="{Binding Timeframe}" Width="80"/>
                <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="60"/>
                <DataGridTemplateColumn Header="Actions" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Edit" Click="EditRule_Click" Margin="2,0"
                                        Background="#3E3E56" Foreground="White" BorderBrush="Cyan" Width="40"/>
                                <Button Content="Delete" Click="DeleteRule_Click" Margin="2,0"
                                        Background="#3E3E56" Foreground="White" BorderBrush="Red" Width="40"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Add New Rule -->
        <Grid Grid.Row="2" Margin="0,5">
            <Button x:Name="AddRuleButton" Content="Add New Rule" Height="35" Width="150" 
                    HorizontalAlignment="Center" Click="AddRuleButton_Click"
                    Background="#3E3E56" Foreground="White" BorderBrush="Cyan"/>
        </Grid>

        <!-- Rule Editor Popup -->
        <Popup x:Name="RuleEditorPopup" PlacementTarget="{Binding ElementName=AddRuleButton}" 
               Placement="Center" StaysOpen="False" Width="400" Height="500">
            <Border BorderBrush="#3E3E56" BorderThickness="2" Background="#1E1E30" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Rule Editor" FontSize="18" 
                               FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Rule Name:" Foreground="White" Margin="0,5"/>
                            <TextBox x:Name="RuleNameTextBox" Margin="0,0,0,10" 
                                     Background="#2D2D42" Foreground="White" BorderBrush="#3E3E56"/>

                            <TextBlock Text="Symbol:" Foreground="White" Margin="0,5"/>
                            <TextBox x:Name="SymbolTextBox" Margin="0,0,0,10"
                                     Background="#2D2D42" Foreground="White" BorderBrush="#3E3E56"/>

                            <TextBlock Text="Order Type:" Foreground="White" Margin="0,5"/>
                            <ComboBox x:Name="OrderTypeComboBox" Margin="0,0,0,10"
                                      Background="#2D2D42" Foreground="White" BorderBrush="#3E3E56">
                                <ComboBoxItem Content="BUY"/>
                                <ComboBoxItem Content="SELL"/>
                            </ComboBox>

                            <TextBlock Text="Entry Price:" Foreground="White" Margin="0,5"/>
                            <TextBox x:Name="EntryPriceTextBox" Margin="0,0,0,10"
                                     Background="#2D2D42" Foreground="White" BorderBrush="#3E3E56"/>

                            <TextBlock Text="Exit Price:" Foreground="White" Margin="0,5"/>
                            <TextBox x:Name="ExitPriceTextBox" Margin="0,0,0,10"
                                     Background="#2D2D42" Foreground="White" BorderBrush="#3E3E56"/>

                            <TextBlock Text="Stop Loss:" Foreground="White" Margin="0,5"/>
                            <TextBox x:Name="StopLossTextBox" Margin="0,0,0,10"
                                     Background="#2D2D42" Foreground="White" BorderBrush="#3E3E56"/>

                            <TextBlock Text="Quantity:" Foreground="White" Margin="0,5"/>
                            <TextBox x:Name="QuantityTextBox" Margin="0,0,0,10"
                                     Background="#2D2D42" Foreground="White" BorderBrush="#3E3E56"/>

                            <TextBlock Text="Timeframe:" Foreground="White" Margin="0,5"/>
                            <ComboBox x:Name="TimeframeComboBox" Margin="0,0,0,10"
                                      Background="#2D2D42" Foreground="White" BorderBrush="#3E3E56">
                                <ComboBoxItem Content="1min"/>
                                <ComboBoxItem Content="5min"/>
                                <ComboBoxItem Content="15min"/>
                                <ComboBoxItem Content="30min"/>
                                <ComboBoxItem Content="1hour"/>
                                <ComboBoxItem Content="4hour"/>
                                <ComboBoxItem Content="1day"/>
                            </ComboBox>

                            <TextBlock Text="Condition:" Foreground="White" Margin="0,5"/>
                            <TextBox x:Name="ConditionTextBox" Margin="0,0,0,10"
                                     Background="#2D2D42" Foreground="White" BorderBrush="#3E3E56"/>

                            <CheckBox x:Name="IsActiveCheckBox" Content="Active" Margin="0,5" Foreground="White"/>
                        </StackPanel>
                    </ScrollViewer>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button x:Name="SaveRuleButton" Content="Save" Width="100" Height="30" Margin="5,0"
                                Click="SaveRuleButton_Click"
                                Background="#3E3E56" Foreground="White" BorderBrush="Cyan"/>
                        <Button x:Name="CancelRuleButton" Content="Cancel" Width="100" Height="30" Margin="5,0"
                                Click="CancelRuleButton_Click"
                                Background="#3E3E56" Foreground="White" BorderBrush="Gray"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>
