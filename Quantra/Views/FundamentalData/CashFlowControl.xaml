<UserControl x:Class="Quantra.Views.FundamentalData.CashFlowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quantra.Views.FundamentalData"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800"
             Background="#1E1E30"
             MinWidth="400" MinHeight="300">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/EnhancedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="Cash Flow Statement" FontSize="22" 
                       FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBox x:Name="SymbolTextBox" Width="100" Height="30" 
                         Margin="0,0,10,0" VerticalContentAlignment="Center"
                         materialDesign:HintAssist.Hint="Symbol"
                         Style="{StaticResource EnhancedTextBoxStyle}"
                         KeyDown="SymbolTextBox_KeyDown"/>
                <Button x:Name="LoadButton" Content="Load" Width="80" Height="30" 
                        Click="LoadButton_Click"
                        Background="#3E3E56" Foreground="White" BorderBrush="Cyan"/>
            </StackPanel>
        </Grid>
        
        <!-- Report Type Toggle and Loading -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="Report Type:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <RadioButton x:Name="QuarterlyRadio" Content="Quarterly" 
                             Foreground="White" IsChecked="True" 
                             Checked="ReportTypeChanged" Margin="0,0,15,0"/>
                <RadioButton x:Name="AnnualRadio" Content="Annual" 
                             Foreground="White" Checked="ReportTypeChanged"/>
            </StackPanel>
            
            <ProgressBar Grid.Column="1" x:Name="LoadingIndicator" IsIndeterminate="True" 
                         Height="4" Margin="20,0,0,0"
                         Visibility="Collapsed" Foreground="Cyan"/>
        </Grid>
        
        <!-- Cash Flow Summary Cards -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Summary Cards -->
            <Grid Grid.Row="0" x:Name="SummaryCardsGrid" Margin="0,0,0,15" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Background="#2D4A3D" CornerRadius="5" Padding="15" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Operating Cash Flow" Foreground="#99CCFF" FontSize="11"/>
                        <TextBlock x:Name="OperatingCashFlowText" Text="--" 
                                   Foreground="#50E070" FontSize="16" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="1" Background="#4A2D3D" CornerRadius="5" Padding="15" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Investing Cash Flow" Foreground="#99CCFF" FontSize="11"/>
                        <TextBlock x:Name="InvestingCashFlowText" Text="--" 
                                   Foreground="#FF6B6B" FontSize="16" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="2" Background="#3D3D4A" CornerRadius="5" Padding="15" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Financing Cash Flow" Foreground="#99CCFF" FontSize="11"/>
                        <TextBlock x:Name="FinancingCashFlowText" Text="--" 
                                   Foreground="White" FontSize="16" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="3" Background="#2D3D4A" CornerRadius="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Free Cash Flow" Foreground="#99CCFF" FontSize="11"/>
                        <TextBlock x:Name="FreeCashFlowText" Text="--" 
                                   Foreground="#1E90FF" FontSize="16" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Data Grid -->
            <DataGrid Grid.Row="1" x:Name="CashFlowGrid" 
                      AutoGenerateColumns="False"
                      Background="#1E1E30" Foreground="White"
                      BorderThickness="0"
                      RowBackground="#2D2D42"
                      AlternatingRowBackground="#262638"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#3E3E56"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      ColumnHeaderStyle="{StaticResource EnhancedDataGridColumnHeaderStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Period" Binding="{Binding FiscalDateEnding}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#1E90FF"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Operating" Binding="{Binding OperatingCashflow, StringFormat=\{0:N0\}}" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#50E070"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Investing" Binding="{Binding CashflowFromInvestment, StringFormat=\{0:N0\}}" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#FF6B6B"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Financing" Binding="{Binding CashflowFromFinancing, StringFormat=\{0:N0\}}" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Free Cash Flow" Binding="{Binding FreeCashFlow, StringFormat=\{0:N0\}}" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#1E90FF"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="CapEx" Binding="{Binding CapitalExpenditures, StringFormat=\{0:N0\}}" Width="110">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Dividends" Binding="{Binding DividendPayout, StringFormat=\{0:N0\}}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        
        <!-- Status Bar -->
        <TextBlock Grid.Row="3" x:Name="StatusText" Text="Enter a symbol to load cash flow data." 
                   Foreground="#AAAAAA" Margin="0,10,0,0"/>
    </Grid>
</UserControl>
