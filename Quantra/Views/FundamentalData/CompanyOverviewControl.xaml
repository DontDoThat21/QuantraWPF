<UserControl x:Class="Quantra.Views.FundamentalData.CompanyOverviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quantra.Views.FundamentalData"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#1E1E30"
             MinWidth="400" MinHeight="300">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/EnhancedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Value formatting converter -->
            <Style x:Key="MetricLabelStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="#99CCFF"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Margin" Value="0,0,10,0"/>
            </Style>
            
            <Style x:Key="MetricValueStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="Company Overview" FontSize="22" 
                       FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBox x:Name="SymbolTextBox" Width="100" Height="30" 
                         Margin="0,0,10,0" VerticalContentAlignment="Center"
                         materialDesign:HintAssist.Hint="Symbol"
                         Style="{StaticResource EnhancedTextBoxStyle}"
                         KeyDown="SymbolTextBox_KeyDown"/>
                <Button x:Name="LoadButton" Content="Load" Width="80" Height="30" 
                        Click="LoadButton_Click"
                        Background="#3E3E56" Foreground="White" BorderBrush="Cyan"/>
            </StackPanel>
        </Grid>
        
        <!-- Loading/Error Messages -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <ProgressBar x:Name="LoadingIndicator" IsIndeterminate="True" 
                         Height="4" Visibility="Collapsed"
                         Foreground="Cyan"/>
            <TextBlock x:Name="ErrorTextBlock" Foreground="#FF6B6B" 
                       TextWrapping="Wrap" Visibility="Collapsed"/>
        </Grid>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <Grid x:Name="ContentGrid" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Company Information Section -->
                <Border Grid.Row="0" Background="#2D2D42" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="COMPANY INFORMATION" FontWeight="Bold" 
                                   Foreground="#1E90FF" Margin="0,0,0,10"/>
                        
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,10,10">
                                <TextBlock Text="Name" Style="{StaticResource MetricLabelStyle}"/>
                                <TextBlock x:Name="CompanyNameText" Style="{StaticResource MetricValueStyle}"/>
                                
                                <TextBlock Text="Symbol" Style="{StaticResource MetricLabelStyle}" Margin="0,10,0,0"/>
                                <TextBlock x:Name="CompanySymbolText" Style="{StaticResource MetricValueStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="0,0,10,10">
                                <TextBlock Text="Exchange" Style="{StaticResource MetricLabelStyle}"/>
                                <TextBlock x:Name="ExchangeText" Style="{StaticResource MetricValueStyle}"/>
                                
                                <TextBlock Text="Sector" Style="{StaticResource MetricLabelStyle}" Margin="0,10,0,0"/>
                                <TextBlock x:Name="SectorText" Style="{StaticResource MetricValueStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Margin="0,0,0,10">
                                <TextBlock Text="Industry" Style="{StaticResource MetricLabelStyle}"/>
                                <TextBlock x:Name="IndustryText" Style="{StaticResource MetricValueStyle}" 
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Description (expandable) -->
                        <Expander Grid.Row="2" Header="Description" Foreground="White" Margin="0,10,0,0">
                            <TextBlock x:Name="DescriptionText" TextWrapping="Wrap" 
                                       Foreground="#CCCCCC" Margin="0,10,0,0" MaxWidth="700"/>
                        </Expander>
                    </Grid>
                </Border>
                
                <!-- Valuation Metrics Section -->
                <Border Grid.Row="1" Background="#2D2D42" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="VALUATION METRICS" FontWeight="Bold" 
                                   Foreground="#1E90FF" Margin="0,0,0,15"/>
                        
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Row 1 -->
                            <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,10,15">
                                <TextBlock Text="Market Cap" Style="{StaticResource MetricLabelStyle}"/>
                                <TextBlock x:Name="MarketCapText" Style="{StaticResource MetricValueStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,10,15">
                                <TextBlock Text="P/E Ratio" Style="{StaticResource MetricLabelStyle}"/>
                                <TextBlock x:Name="PERatioText" Style="{StaticResource MetricValueStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,10,15">
                                <TextBlock Text="PEG Ratio" Style="{StaticResource MetricLabelStyle}"/>
                                <TextBlock x:Name="PEGRatioText" Style="{StaticResource MetricValueStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="3" Grid.Row="0" Margin="0,0,0,15">
                                <TextBlock Text="Book Value" Style="{StaticResource MetricLabelStyle}"/>
                                <TextBlock x:Name="BookValueText" Style="{StaticResource MetricValueStyle}"/>
                            </StackPanel>
                            
                            <!-- Row 2 -->
                            <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,10,0">
                                <TextBlock Text="Dividend Yield" Style="{StaticResource MetricLabelStyle}"/>
                                <TextBlock x:Name="DividendYieldText" Style="{StaticResource MetricValueStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Grid.Row="1" Margin="0,0,10,0">
                                <TextBlock Text="EPS" Style="{StaticResource MetricLabelStyle}"/>
                                <TextBlock x:Name="EPSText" Style="{StaticResource MetricValueStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Grid.Row="1" Margin="0,0,10,0">
                                <TextBlock Text="52-Week High" Style="{StaticResource MetricLabelStyle}"/>
                                <TextBlock x:Name="Week52HighText" Style="{StaticResource MetricValueStyle}" Foreground="#50E070"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="3" Grid.Row="1" Margin="0,0,0,0">
                                <TextBlock Text="52-Week Low" Style="{StaticResource MetricLabelStyle}"/>
                                <TextBlock x:Name="Week52LowText" Style="{StaticResource MetricValueStyle}" Foreground="#FF6B6B"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
                
                <!-- Financial Statements Buttons -->
                <Border Grid.Row="2" Background="#2D2D42" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="FINANCIAL STATEMENTS" FontWeight="Bold" 
                                   Foreground="#1E90FF" Margin="0,0,0,15"/>
                        
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="IncomeStatementButton" Content="Income Statement" 
                                    Width="150" Height="35" Margin="0,0,15,0"
                                    Click="IncomeStatementButton_Click"
                                    Background="#3E3E56" Foreground="White" BorderBrush="Cyan"/>
                            <Button x:Name="BalanceSheetButton" Content="Balance Sheet" 
                                    Width="150" Height="35"
                                    Click="BalanceSheetButton_Click"
                                    Background="#3E3E56" Foreground="White" BorderBrush="Cyan"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Additional Metrics Section -->
                <Border Grid.Row="3" Background="#2D2D42" CornerRadius="5" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="ADDITIONAL METRICS" FontWeight="Bold" 
                                   Foreground="#1E90FF" Margin="0,0,0,15"/>
                        
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Beta" Style="{StaticResource MetricLabelStyle}"/>
                                <TextBlock x:Name="BetaText" Style="{StaticResource MetricValueStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                <TextBlock Text="Profit Margin" Style="{StaticResource MetricLabelStyle}"/>
                                <TextBlock x:Name="ProfitMarginText" Style="{StaticResource MetricValueStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Margin="0,0,10,0">
                                <TextBlock Text="Return on Equity" Style="{StaticResource MetricLabelStyle}"/>
                                <TextBlock x:Name="ROEText" Style="{StaticResource MetricValueStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="3" Margin="0,0,0,0">
                                <TextBlock Text="Analyst Target" Style="{StaticResource MetricLabelStyle}"/>
                                <TextBlock x:Name="AnalystTargetText" Style="{StaticResource MetricValueStyle}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
        
        <!-- Status Bar -->
        <TextBlock Grid.Row="3" x:Name="StatusText" Text="Enter a symbol to load company data." 
                   Foreground="#AAAAAA" Margin="0,10,0,0"/>
    </Grid>
</UserControl>
