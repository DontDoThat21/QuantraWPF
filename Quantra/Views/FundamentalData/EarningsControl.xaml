<UserControl x:Class="Quantra.Views.FundamentalData.EarningsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quantra.Views.FundamentalData"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800"
             Background="#1E1E30"
             MinWidth="400" MinHeight="300">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/EnhancedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="Earnings Data" FontSize="22" 
                       FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBox x:Name="SymbolTextBox" Width="100" Height="30" 
                         Margin="0,0,10,0" VerticalContentAlignment="Center"
                         materialDesign:HintAssist.Hint="Symbol"
                         Style="{StaticResource EnhancedTextBoxStyle}"
                         KeyDown="SymbolTextBox_KeyDown"/>
                <Button x:Name="LoadButton" Content="Load" Width="80" Height="30" 
                        Click="LoadButton_Click"
                        Background="#3E3E56" Foreground="White" BorderBrush="Cyan"/>
            </StackPanel>
        </Grid>
        
        <!-- Loading Indicator -->
        <ProgressBar Grid.Row="1" x:Name="LoadingIndicator" IsIndeterminate="True" 
                     Height="4" Margin="0,0,0,10"
                     Visibility="Collapsed" Foreground="Cyan"/>
        
        <!-- Upcoming Earnings Card -->
        <Border Grid.Row="2" x:Name="UpcomingEarningsCard" Background="#2D4A3D" CornerRadius="5" 
                Padding="15" Margin="0,0,0,15" Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="UPCOMING EARNINGS" FontWeight="Bold" Foreground="#1E90FF" FontSize="12"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Expected Date: " Foreground="#99CCFF"/>
                        <TextBlock x:Name="UpcomingEarningsText" Text="N/A" Foreground="#50E070" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Latest EPS" Foreground="#99CCFF" FontSize="11"/>
                    <TextBlock x:Name="LatestEPSText" Text="--" Foreground="White" 
                               FontSize="18" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content Area with Tabs -->
        <TabControl x:Name="EarningsTabControl" Grid.Row="3" Background="#2D2D42" BorderBrush="#3E3E56">
            <TabItem Header="Quarterly Earnings" Style="{StaticResource TabItemStyle}">
                <DataGrid x:Name="QuarterlyEarningsGrid" 
                          AutoGenerateColumns="False"
                          Background="#2D2D42" Foreground="White"
                          BorderThickness="0"
                          RowBackground="#2D2D42"
                          AlternatingRowBackground="#262638"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#3E3E56"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          ColumnHeaderStyle="{StaticResource EnhancedDataGridColumnHeaderStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Period" Binding="{Binding FiscalDateEnding}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#1E90FF"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Reported Date" Binding="{Binding ReportedDate}" Width="110">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Reported EPS" Binding="{Binding ReportedEPS, StringFormat=\{0:F2\}}" Width="110">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Estimated EPS" Binding="{Binding EstimatedEPS, StringFormat=\{0:F2\}}" Width="110">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#99CCFF"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Surprise" Binding="{Binding Surprise, StringFormat=\{0:F2\}}" Width="90">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Surprise, Converter={x:Static local:PositiveValueConverter.Instance}}" Value="True">
                                            <Setter Property="Foreground" Value="#50E070"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Surprise, Converter={x:Static local:PositiveValueConverter.Instance}}" Value="False">
                                            <Setter Property="Foreground" Value="#FF6B6B"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Surprise %" Binding="{Binding SurprisePercentage, StringFormat=\{0:F2\}%}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SurprisePercentage, Converter={x:Static local:PositiveValueConverter.Instance}}" Value="True">
                                            <Setter Property="Foreground" Value="#50E070"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SurprisePercentage, Converter={x:Static local:PositiveValueConverter.Instance}}" Value="False">
                                            <Setter Property="Foreground" Value="#FF6B6B"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            
            <TabItem Header="Annual Earnings" Style="{StaticResource TabItemStyle}">
                <DataGrid x:Name="AnnualEarningsGrid" 
                          AutoGenerateColumns="False"
                          Background="#2D2D42" Foreground="White"
                          BorderThickness="0"
                          RowBackground="#2D2D42"
                          AlternatingRowBackground="#262638"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#3E3E56"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          ColumnHeaderStyle="{StaticResource EnhancedDataGridColumnHeaderStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Fiscal Year" Binding="{Binding FiscalDateEnding}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#1E90FF"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Reported EPS" Binding="{Binding ReportedEPS, StringFormat=\$\{0:F2\}}" Width="140">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="14"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            
            <TabItem Header="EPS Trend" Style="{StaticResource TabItemStyle}">
                <lvc:CartesianChart x:Name="EPSChart" Background="Transparent" Margin="10">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Period" Foreground="White" FontSize="10">
                            <lvc:Axis.Separator>
                                <lvc:Separator StrokeThickness="0"/>
                            </lvc:Axis.Separator>
                        </lvc:Axis>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="EPS ($)" Foreground="White" FontSize="10">
                            <lvc:Axis.Separator>
                                <lvc:Separator Stroke="#3E3E56" StrokeThickness="1"/>
                            </lvc:Axis.Separator>
                        </lvc:Axis>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
            </TabItem>
        </TabControl>
        
        <!-- Status Bar -->
        <TextBlock Grid.Row="4" x:Name="StatusText" Text="Enter a symbol to load earnings data." 
                   Foreground="#AAAAAA" Margin="0,10,0,0"/>
    </Grid>
</UserControl>
