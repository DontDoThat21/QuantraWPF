<Window x:Class="Quantra.Views.FundamentalData.IncomeStatementModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quantra.Views.FundamentalData"
        mc:Ignorable="d"
        Title="Income Statement" 
        Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        MinHeight="400" MinWidth="600">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/EnhancedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border Background="#1A1A28" BorderBrush="#3E3E56" BorderThickness="1" CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#262638" CornerRadius="5,5,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                        <TextBlock x:Name="TitleText" Text="Income Statement" 
                                   Foreground="#1E90FF" FontWeight="Bold" FontSize="16"/>
                    </StackPanel>
                    <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Center"
                            Width="30" Height="30" Margin="0,0,10,0"
                            Background="Transparent" BorderThickness="0"
                            Foreground="#CCCCCC" FontWeight="Bold" FontSize="16"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>
            
            <!-- Report Type Toggle -->
            <Border Grid.Row="1" Padding="15,10" Background="#1A1A28">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Report Type:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <RadioButton x:Name="QuarterlyRadio" Content="Quarterly" 
                                 Foreground="White" IsChecked="True" 
                                 Checked="ReportTypeChanged" Margin="0,0,15,0"/>
                    <RadioButton x:Name="AnnualRadio" Content="Annual" 
                                 Foreground="White" Checked="ReportTypeChanged"/>
                    
                    <ProgressBar x:Name="LoadingIndicator" IsIndeterminate="True" 
                                 Width="100" Height="4" Margin="20,0,0,0"
                                 Visibility="Collapsed" Foreground="Cyan"/>
                </StackPanel>
            </Border>
            
            <!-- Data Grid -->
            <DataGrid Grid.Row="2" x:Name="IncomeStatementGrid" 
                      AutoGenerateColumns="False"
                      Background="#1A1A28" Foreground="White"
                      BorderThickness="0"
                      RowBackground="#2D2D42"
                      AlternatingRowBackground="#262638"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#3E3E56"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      ColumnHeaderStyle="{StaticResource EnhancedDataGridColumnHeaderStyle}"
                      Margin="15,0,15,15">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Period" Binding="{Binding FiscalDateEnding}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#1E90FF"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Total Revenue" Binding="{Binding TotalRevenue, StringFormat=\{0:N0\}}" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Gross Profit" Binding="{Binding GrossProfit, StringFormat=\{0:N0\}}" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Operating Income" Binding="{Binding OperatingIncome, StringFormat=\{0:N0\}}" Width="130">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Net Income" Binding="{Binding NetIncome, StringFormat=\{0:N0\}}" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#50E070"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="EBITDA" Binding="{Binding EBITDA, StringFormat=\{0:N0\}}" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="R&amp;D" Binding="{Binding ResearchAndDevelopment, StringFormat=\{0:N0\}}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            
            <!-- Footer -->
            <Border Grid.Row="3" Background="#262638" Padding="15,10">
                <Grid>
                    <TextBlock x:Name="StatusText" Text="Loading..." 
                               Foreground="#AAAAAA" VerticalAlignment="Center"/>
                    <Button Content="Close" HorizontalAlignment="Right"
                            Width="80" Height="30"
                            Background="#3E3E56" Foreground="White" BorderBrush="Cyan"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
