<Window x:Class="Quantra.Views.CustomizeLayoutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Quantra.ViewModels"
        xmlns:converters="clr-namespace:Quantra.Converters"
        Title="Customize Chart Layout" 
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#23233A">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Quantra;component/Styles/EnhancedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:NullToBooleanConverter x:Key="NullToBooleanConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Customize Chart Layout" 
                   Style="{StaticResource EnhancedTextBlockStyle}" 
                   FontSize="20" FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Style="{StaticResource EnhancedTabControlStyle}">
            
            <!-- Panels Tab -->
            <TabItem Header="Chart Panels">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel - Panel List -->
                    <DockPanel Grid.Column="0">
                        <TextBlock DockPanel.Dock="Top" Text="Chart Panels:" 
                                   Style="{StaticResource EnhancedTextBlockStyle}" 
                                   FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <!-- Panel Management Buttons -->
                        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" 
                                    HorizontalAlignment="Left" Margin="0,10,0,0">
                            <Button Content="Move Up" Command="{Binding MovePanelUpCommand}" 
                                    Style="{StaticResource EnhancedButtonStyle}" 
                                    Width="80" Margin="0,0,5,0"/>
                            <Button Content="Move Down" Command="{Binding MovePanelDownCommand}" 
                                    Style="{StaticResource EnhancedButtonStyle}" 
                                    Width="80" Margin="0,0,5,0"/>
                            <Button Content="Remove" Command="{Binding RemovePanelCommand}" 
                                    Style="{StaticResource EnhancedButtonStyle}" 
                                    Width="80"/>
                        </StackPanel>

                        <!-- Panels ListBox -->
                        <ListBox ItemsSource="{Binding Panels}"
                                 SelectedItem="{Binding SelectedPanel}"
                                 Style="{StaticResource EnhancedListBoxStyle}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding DisplayName}" 
                                                   Style="{StaticResource EnhancedTextBlockStyle}"/>
                                        <CheckBox Grid.Column="1" IsChecked="{Binding IsVisible}" 
                                                  Style="{StaticResource EnhancedCheckBoxStyle}"
                                                  ToolTip="Visible"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>

                    <!-- Right Panel - Panel Properties -->
                    <DockPanel Grid.Column="2">
                        <TextBlock DockPanel.Dock="Top" Text="Panel Properties:" 
                                   Style="{StaticResource EnhancedTextBlockStyle}" 
                                   FontWeight="Bold" Margin="0,0,0,10"/>

                        <StackPanel DockPanel.Dock="Top" IsEnabled="{Binding SelectedPanel, Converter={StaticResource NullToBooleanConverter}}">
                            
                            <!-- Panel Name -->
                            <TextBlock Text="Panel Name:" Style="{StaticResource EnhancedTextBlockStyle}" Margin="0,5,0,2"/>
                            <TextBox Text="{Binding SelectedPanel.DisplayName, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource EnhancedTextBoxStyle}"/>

                            <!-- Position -->
                            <TextBlock Text="Position:" Style="{StaticResource EnhancedTextBlockStyle}" Margin="0,10,0,2"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Row:" Style="{StaticResource EnhancedTextBlockStyle}" 
                                           VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Grid.Column="1" Text="{Binding SelectedPanel.Row, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource EnhancedTextBoxStyle}" Margin="0,0,10,0"/>
                                <TextBlock Grid.Column="2" Text="Col:" Style="{StaticResource EnhancedTextBlockStyle}" 
                                           VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Grid.Column="3" Text="{Binding SelectedPanel.Column, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource EnhancedTextBoxStyle}"/>
                            </Grid>

                            <!-- Span -->
                            <TextBlock Text="Span:" Style="{StaticResource EnhancedTextBlockStyle}" Margin="0,10,0,2"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Rows:" Style="{StaticResource EnhancedTextBlockStyle}" 
                                           VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Grid.Column="1" Text="{Binding SelectedPanel.RowSpan, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource EnhancedTextBoxStyle}" Margin="0,0,10,0"/>
                                <TextBlock Grid.Column="2" Text="Cols:" Style="{StaticResource EnhancedTextBlockStyle}" 
                                           VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Grid.Column="3" Text="{Binding SelectedPanel.ColumnSpan, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource EnhancedTextBoxStyle}"/>
                            </Grid>

                            <!-- Height Ratio -->
                            <TextBlock Text="Height Ratio:" Style="{StaticResource EnhancedTextBlockStyle}" Margin="0,10,0,2"/>
                            <TextBox Text="{Binding SelectedPanel.HeightRatio, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource EnhancedTextBoxStyle}"/>

                            <!-- Visibility -->
                            <CheckBox Content="Visible" IsChecked="{Binding SelectedPanel.IsVisible}" 
                                      Style="{StaticResource EnhancedCheckBoxStyle}" Margin="0,10,0,0"/>
                        </StackPanel>
                    </DockPanel>
                </Grid>
            </TabItem>

            <!-- Add Panels Tab -->
            <TabItem Header="Add Panels">
                <DockPanel Margin="10">
                    <TextBlock DockPanel.Dock="Top" Text="Available Panel Types:" 
                               Style="{StaticResource EnhancedTextBlockStyle}" 
                               FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding AvailablePanelTypes}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="3"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding}" 
                                            Command="{Binding DataContext.AddPanelCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource EnhancedButtonStyle}"
                                            Margin="5"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </TabItem>

            <!-- Grid Settings Tab -->
            <TabItem Header="Grid Settings">
                <StackPanel Margin="20">
                    
                    <!-- Layout Name -->
                    <TextBlock Text="Layout Name:" Style="{StaticResource EnhancedTextBlockStyle}" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding LayoutName, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource EnhancedTextBoxStyle}" MaxWidth="300" HorizontalAlignment="Left"/>

                    <!-- Grid Dimensions -->
                    <TextBlock Text="Grid Dimensions:" Style="{StaticResource EnhancedTextBlockStyle}" 
                               FontWeight="Bold" Margin="0,20,0,5"/>
                    <Grid MaxWidth="300" HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Rows:" Style="{StaticResource EnhancedTextBlockStyle}" 
                                   VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Grid.Column="1" Text="{Binding TotalRows, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource EnhancedTextBoxStyle}" Margin="0,0,20,0"/>
                        <TextBlock Grid.Column="2" Text="Columns:" Style="{StaticResource EnhancedTextBlockStyle}" 
                                   VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Grid.Column="3" Text="{Binding TotalColumns, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource EnhancedTextBoxStyle}"/>
                    </Grid>

                    <!-- Visual Settings -->
                    <TextBlock Text="Visual Settings:" Style="{StaticResource EnhancedTextBlockStyle}" 
                               FontWeight="Bold" Margin="0,20,0,5"/>
                    
                    <CheckBox Content="Show Grid Lines" IsChecked="{Binding ShowGridLines}" 
                              Style="{StaticResource EnhancedCheckBoxStyle}" Margin="0,5,0,0"/>
                    
                    <TextBlock Text="Grid Line Color:" Style="{StaticResource EnhancedTextBlockStyle}" Margin="0,10,0,5"/>
                    <TextBox Text="{Binding GridLineColor, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource EnhancedTextBoxStyle}" MaxWidth="200" HorizontalAlignment="Left"/>

                    <!-- Reset Button -->
                    <Button Content="Reset to Default" Command="{Binding ResetToDefaultCommand}" 
                            Style="{StaticResource EnhancedButtonStyle}" 
                            Width="150" HorizontalAlignment="Left" Margin="0,30,0,0"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Apply" Command="{Binding ApplyCommand}" 
                    Style="{StaticResource EnhancedButtonStyle}" 
                    Width="80" Margin="0,0,10,0"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" 
                    Style="{StaticResource EnhancedButtonStyle}" 
                    Width="80"/>
        </StackPanel>
    </Grid>
</Window>