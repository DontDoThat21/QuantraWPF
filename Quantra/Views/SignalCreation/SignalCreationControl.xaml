<UserControl x:Class="Quantra.Views.SignalCreation.SignalCreationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Quantra.Views.SignalCreation"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#1E1E30">
    
    <UserControl.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#00B4D8"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>
        
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2A2A3B"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#3E3E56"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555577"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#555577"/>
                    <Setter Property="Foreground" Value="#888899"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0099FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="DangerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#DC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#555577"/>
                    <Setter Property="Foreground" Value="#888899"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>
        
        <!-- Main Content Area -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Title and Status Bar -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Signal Creation" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" 
                                     Width="100" 
                                     Height="4" 
                                     Margin="0,0,15,0"
                                     Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <TextBlock Text="{Binding StatusMessage}" 
                                   Foreground="#888899" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
                
                <!-- Section 1: Signal Configuration Panel -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ Signal Configuration" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Signal Name -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Signal Name *" Foreground="White" Margin="0,0,0,5"/>
                                <TextBox Style="{StaticResource InputTextBoxStyle}" 
                                         Text="{Binding CurrentSignal.Name, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            
                            <!-- Enable/Disable Toggle -->
                            <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Bottom">
                                <CheckBox Content="Enable Signal" 
                                          IsChecked="{Binding CurrentSignal.IsEnabled}" 
                                          Foreground="White"
                                          Margin="0,0,0,10"/>
                            </StackPanel>
                            
                            <!-- Description -->
                            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="0,10,0,0">
                                <TextBlock Text="Description / Notes" Foreground="White" Margin="0,0,0,5"/>
                                <TextBox Style="{StaticResource InputTextBoxStyle}" 
                                         Text="{Binding CurrentSignal.Description, UpdateSourceTrigger=PropertyChanged}"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         Height="60"/>
                            </StackPanel>
                            
                            <!-- Action Buttons -->
                            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" 
                                        Orientation="Horizontal" 
                                        HorizontalAlignment="Right"
                                        Margin="0,15,0,0">
                                <Button Content="New Signal" 
                                        Style="{StaticResource ActionButtonStyle}"
                                        Command="{Binding NewSignalCommand}"/>
                                <Button Content="Save Signal" 
                                        Style="{StaticResource ActionButtonStyle}"
                                        Command="{Binding SaveSignalCommand}"/>
                                <Button Content="Delete Signal" 
                                        Style="{StaticResource DangerButtonStyle}"
                                        Command="{Binding DeleteSignalCommand}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Section 2: Symbol Management DataGrid -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="ðŸ“ˆ Symbol Management" Style="{StaticResource SectionHeaderStyle}"/>
                            <Button Grid.Column="1" 
                                    Content="+ Add Symbol" 
                                    Style="{StaticResource ActionButtonStyle}"
                                    Command="{Binding AddSymbolCommand}"/>
                        </Grid>
                        
                        <DataGrid ItemsSource="{Binding CurrentSignal.Symbols}"
                                  SelectedItem="{Binding SelectedSymbol}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  Background="#1A1A2E"
                                  Foreground="GhostWhite"
                                  BorderBrush="#555577"
                                  RowBackground="#1A1A2E"
                                  AlternatingRowBackground="#2A2A3B"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#3E3E56"
                                  MinHeight="120"
                                  MaxHeight="250">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="Black"/>
                                    <Setter Property="Foreground" Value="GhostWhite"/>
                                    <Setter Property="BorderBrush" Value="#3E3E56"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="GhostWhite"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#007ACC"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.CellStyle>
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Symbol" Width="150">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding Symbol, UpdateSourceTrigger=PropertyChanged}"
                                                     Background="Transparent"
                                                     Foreground="GhostWhite"
                                                     BorderThickness="0"
                                                     Padding="5"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <DataGridTemplateColumn Header="Allocation %" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding AllocationPercentage, StringFormat=N1, UpdateSourceTrigger=PropertyChanged}"
                                                     Background="Transparent"
                                                     Foreground="GhostWhite"
                                                     BorderThickness="0"
                                                     Padding="5"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <DataGridCheckBoxColumn Header="Active" 
                                                        Binding="{Binding IsActive}" 
                                                        Width="60"/>
                                
                                <DataGridTemplateColumn Header="Status" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Background="Transparent">
                                                <Ellipse Width="10" Height="10" Margin="5,0">
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Setter Property="Fill" Value="#888899"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsValidated}" Value="True">
                                                                    <Setter Property="Fill" Value="#28A745"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                                <TextBlock Text="{Binding ValidationMessage}" 
                                                           Foreground="GhostWhite"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <DataGridTemplateColumn Header="Actions" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Background="Transparent">
                                                <Button Content="Validate" 
                                                        Background="#17A2B8" 
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Padding="8,4"
                                                        Margin="2"
                                                        Command="{Binding DataContext.ValidateSymbolCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"/>
                                                <Button Content="Remove" 
                                                        Background="#DC3545" 
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Padding="8,4"
                                                        Margin="2"
                                                        Command="{Binding DataContext.RemoveSymbolCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
                
                <!-- Section 3: Indicator Selection -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š Technical Indicators" Style="{StaticResource SectionHeaderStyle}"/>
                        <TextBlock Text="Select indicators to use in your signal conditions:" 
                                   Foreground="#888899" 
                                   Margin="0,0,0,10"/>
                        
                        <ItemsControl ItemsSource="{Binding AvailableIndicators}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#3E3E56" 
                                            CornerRadius="5" 
                                            Padding="10,8" 
                                            Margin="5">
                                        <CheckBox IsChecked="{Binding IsSelected}"
                                                  Foreground="White">
                                            <CheckBox.Content>
                                                <TextBlock Text="{Binding DisplayName}" 
                                                           Foreground="White"
                                                           TextWrapping="NoWrap"/>
                                            </CheckBox.Content>
                                        </CheckBox>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                
                <!-- Section 4: Signal Conditions Builder -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="âš¡ Signal Conditions" Style="{StaticResource SectionHeaderStyle}"/>
                            <Button Grid.Column="1" 
                                    Content="+ Add Condition" 
                                    Style="{StaticResource ActionButtonStyle}"
                                    Command="{Binding AddConditionCommand}"/>
                        </Grid>
                        
                        <TextBlock Text="Build conditions to trigger your trading signal:" 
                                   Foreground="#888899" 
                                   Margin="0,0,0,10"/>
                        
                        <ItemsControl ItemsSource="{Binding CurrentSignal.Conditions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#3E3E56" 
                                            CornerRadius="5" 
                                            Padding="10" 
                                            Margin="0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                            <!-- Logical Operator -->
                                            <ComboBox Grid.Column="0"
                                                      ItemsSource="{Binding DataContext.LogicalOperators, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      SelectedItem="{Binding LogicalOperator}"
                                                      Style="{StaticResource EnhancedComboBoxStyle}"
                                                      Margin="0,0,5,0"/>
                                            
                            <!-- Indicator Selection -->
                                            <ComboBox Grid.Column="1"
                                                      ItemsSource="{Binding DataContext.AvailableIndicators, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      DisplayMemberPath="DisplayName"
                                                      SelectedValuePath="IndicatorType"
                                                      SelectedValue="{Binding Indicator}"
                                                      Style="{StaticResource EnhancedComboBoxStyle}"
                                                      Margin="0,0,5,0"/>
                                            
                            <!-- Comparison Operator -->
                                            <ComboBox Grid.Column="2"
                                                      ItemsSource="{Binding DataContext.ComparisonOperators, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      SelectedItem="{Binding ComparisonOperator}"
                                                      Style="{StaticResource EnhancedComboBoxStyle}"
                                                      Margin="0,0,5,0"/>
                                            
                                            <!-- Threshold Value -->
                                            <TextBox Grid.Column="3"
                                                     Text="{Binding ThresholdValue, UpdateSourceTrigger=PropertyChanged}"
                                                     Background="#454560"
                                                     Foreground="White"
                                                     BorderThickness="0"
                                                     Padding="8,5"
                                                     Margin="0,0,5,0"/>
                                            
                                            <!-- Condition Preview -->
                                            <TextBlock Grid.Column="4"
                                                       Text="{Binding}"
                                                       Foreground="#888899"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,5,0"/>
                                            
                                            <!-- Remove Button -->
                                            <Button Grid.Column="5"
                                                    Content="âœ•"
                                                    Background="#DC3545"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    Width="30"
                                                    Height="30"
                                                    Command="{Binding DataContext.RemoveConditionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                
                <!-- Section 5: Alert Configuration -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ”” Alert Configuration" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Email Notifications -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <CheckBox Content="Email Notifications" 
                                          IsChecked="{Binding CurrentSignal.AlertConfiguration.EmailNotificationEnabled}"
                                          Foreground="White"
                                          Margin="0,5"/>
                            </StackPanel>
                            
                            <!-- SMS Notifications -->
                            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                <CheckBox Content="SMS Notifications" 
                                          IsChecked="{Binding CurrentSignal.AlertConfiguration.SmsNotificationEnabled}"
                                          Foreground="White"
                                          Margin="0,5"/>
                            </StackPanel>
                            
                            <!-- Severity Level -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Alert Severity" Foreground="White" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding SeverityLevels}"
                                          SelectedItem="{Binding CurrentSignal.AlertConfiguration.AlertSeverity}"
                                          Style="{StaticResource EnhancedComboBoxStyle}"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Test Email Button -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                            <Button Content="ðŸ“§ Send Test Email" 
                                    Style="{StaticResource ActionButtonStyle}"
                                    Command="{Binding SendTestEmailCommand}"
                                    ToolTip="Send a test email to the logged-in user's alert email address"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Right Sidebar - Saved Signals List -->
        <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="ðŸ“ Saved Signals" Style="{StaticResource SectionHeaderStyle}"/>
                        <Button Grid.Column="1" 
                                Content="âŸ³" 
                                FontSize="16"
                                Width="30" 
                                Height="30"
                                Background="Transparent"
                                Foreground="#00B4D8"
                                BorderThickness="0"
                                Command="{Binding RefreshCommand}"
                                ToolTip="Refresh signals list"/>
                    </Grid>
                </StackPanel>
                
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding Signals}"
                         SelectedItem="{Binding CurrentSignal}"
                         Background="Transparent"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#3E3E56" 
                                    CornerRadius="5" 
                                    Padding="10" 
                                    Margin="0,3"
                                    Cursor="Hand">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftDoubleClick" 
                                                  Command="{Binding DataContext.LoadSignalCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                  CommandParameter="{Binding}"/>
                                </Border.InputBindings>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               Text="{Binding Name}" 
                                               FontWeight="SemiBold" 
                                               Foreground="White"/>
                                    
                                    <Ellipse Grid.Row="0" Grid.Column="1"
                                             Width="10" Height="10"
                                             VerticalAlignment="Center">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Fill" Value="#888899"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsEnabled}" Value="True">
                                                        <Setter Property="Fill" Value="#28A745"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                    
                                    <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                                               Text="{Binding Description}" 
                                               Foreground="#888899"
                                               TextTrimming="CharacterEllipsis"
                                               MaxWidth="280"/>
                                    
                                    <StackPanel Grid.Row="2" Grid.ColumnSpan="2" 
                                                Orientation="Horizontal" 
                                                Margin="0,5,0,0">
                                        <TextBlock Text="{Binding Symbols.Count, StringFormat='{}{0} symbols'}" 
                                                   Foreground="#555577"
                                                   Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding Indicators.Count, StringFormat='{}{0} indicators'}" 
                                                   Foreground="#555577"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</UserControl>
