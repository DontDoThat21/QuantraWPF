<Window x:Class="Quantra.Views.StockExplorer.StockConfigurationManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Stock Configuration Manager" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner" 
        ResizeMode="CanResize"
        WindowStyle="None"
        Background="#1A1A28"
        BorderBrush="#3E3E56"
        BorderThickness="1"
        KeyDown="Window_KeyDown">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Quantra;component/Styles/EnhancedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Button Style -->
            <Style x:Key="ConfigButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Margin" Value="5,0" />
                <Setter Property="MinWidth" Value="80" />
                <Setter Property="Height" Value="32" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Padding" Value="8,3" />
                <Setter Property="Foreground" Value="White" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border CornerRadius="0" BorderThickness="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="#262638" BorderBrush="#3E3E56" BorderThickness="0,0,0,1" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Stock Configuration Manager" 
                               Style="{StaticResource EnhancedTextBlockStyle}"
                               Foreground="#1E90FF"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center" 
                               Margin="10,0,0,0" />
                    
                    <Button x:Name="CloseButton" 
                            Content="X" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Width="30" 
                            Height="30"
                            Background="Transparent" 
                            BorderThickness="0" 
                            FontSize="20" 
                            FontWeight="Bold"
                            Foreground="#CCCCCC"
                            Margin="0,0,5,0"
                            Click="CloseButton_Click" />
                </Grid>
            </Border>
            
            <!-- Content -->
            <Grid Grid.Row="1" Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <!-- Left Panel - Configuration List -->
                <Border Grid.Column="0" Background="#23233A" BorderBrush="#3E3E56" BorderThickness="1" CornerRadius="4" Margin="0,0,10,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Configurations" 
                                   Style="{StaticResource EnhancedTextBlockStyle}"
                                   FontWeight="Bold"
                                   Margin="10,10,10,5" />
                        
                        <ListBox x:Name="ConfigurationsListBox"
                                 Grid.Row="1"
                                 Background="Transparent"
                                 Foreground="White"
                                 BorderThickness="0"
                                 Margin="5"
                                 SelectionChanged="ConfigurationsListBox_SelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" Margin="5">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="White" />
                                        <TextBlock Text="{Binding SymbolCountText}" FontSize="10" Foreground="#888888" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                            <Button Content="New" Width="70" Height="28" Click="NewButton_Click" Style="{StaticResource ConfigButtonStyle}" Background="#31A278" />
                            <Button Content="Delete" Width="70" Height="28" Click="DeleteButton_Click" Style="{StaticResource ConfigButtonStyle}" Background="#D64545" />
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Right Panel - Configuration Editor -->
                <Border Grid.Column="1" Background="#23233A" BorderBrush="#3E3E56" BorderThickness="1" CornerRadius="4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <!-- Name -->
                        <StackPanel Grid.Row="0" Margin="15,15,15,5">
                            <TextBlock Text="Configuration Name:" 
                                       Style="{StaticResource EnhancedTextBlockStyle}"
                                       FontWeight="Bold"
                                       Margin="0,0,0,5" />
                            <TextBox x:Name="NameTextBox"
                                     Style="{StaticResource EnhancedTextBoxStyle}"
                                     Height="32"
                                     MaxLength="100" />
                        </StackPanel>
                        
                        <!-- Description -->
                        <StackPanel Grid.Row="1" Margin="15,5,15,5">
                            <TextBlock Text="Description:" 
                                       Style="{StaticResource EnhancedTextBlockStyle}"
                                       FontWeight="Bold"
                                       Margin="0,0,0,5" />
                            <TextBox x:Name="DescriptionTextBox"
                                     Style="{StaticResource EnhancedTextBoxStyle}"
                                     Height="50"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     MaxLength="500" />
                        </StackPanel>
                        
                        <!-- Symbols Header -->
                        <Grid Grid.Row="2" Margin="15,10,15,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="Symbols (one per line):" 
                                       Style="{StaticResource EnhancedTextBlockStyle}"
                                       FontWeight="Bold" />
                            
                            <TextBlock x:Name="SymbolCountTextBlock"
                                       Grid.Column="1"
                                       Text="0 symbols"
                                       Style="{StaticResource EnhancedSmallTextBlockStyle}"
                                       Foreground="#888888" />
                        </Grid>
                        
                        <!-- Symbols TextBox -->
                        <TextBox x:Name="SymbolsTextBox"
                                 Grid.Row="3"
                                 Margin="15,5,15,15"
                                 Style="{StaticResource EnhancedTextBoxStyle}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 TextChanged="SymbolsTextBox_TextChanged" />
                        
                        <!-- Save Button -->
                        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15">
                            <Button x:Name="SaveButton"
                                    Content="Save Configuration" 
                                    Width="140" 
                                    Height="32"
                                    Click="SaveButton_Click" 
                                    Style="{StaticResource ConfigButtonStyle}" 
                                    Background="#3A6EA5" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Footer Buttons -->
            <Border Grid.Row="2" Background="#262638" BorderBrush="#3E3E56" BorderThickness="0,1,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="15,0" VerticalAlignment="Center">
                        <TextBlock x:Name="StatusTextBlock" 
                                   Text="Ready" 
                                   Style="{StaticResource EnhancedSmallTextBlockStyle}"
                                   Foreground="#888888" />
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="15,0" VerticalAlignment="Center">
                        <Button x:Name="SelectButton"
                                Content="Select &amp; Load" 
                                Style="{StaticResource ConfigButtonStyle}"
                                Background="#31A278"
                                Width="120"
                                Click="SelectButton_Click" />
                        
                        <Button Content="Cancel" 
                                Style="{StaticResource ConfigButtonStyle}"
                                Background="#666677"
                                Click="CancelButton_Click" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
