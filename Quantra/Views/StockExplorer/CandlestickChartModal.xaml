<Window x:Class="Quantra.Controls.CandlestickChartModal"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
Title="{Binding WindowTitle}" 
Height="{Binding WindowHeight, Mode=TwoWay}" 
Width="{Binding WindowWidth, Mode=TwoWay}"
Left="{Binding WindowLeft, Mode=TwoWay}"
Top="{Binding WindowTop, Mode=TwoWay}"
MinHeight="500" 
MinWidth="800"
Background="#23233A"
WindowStartupLocation="Manual"
ResizeMode="CanResize"
KeyDown="Window_KeyDown">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="#2D2D4D" 
                BorderBrush="#3E3E56" 
                BorderThickness="1" 
                CornerRadius="3" 
                Padding="15"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Symbol and Real-Time Price Ticker -->
                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,20,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Symbol}" 
                                   Foreground="Cyan" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   FontFamily="Franklin Gothic Medium"/>
                        <!-- Market Status Indicator -->
                        <Border Background="{Binding MarketStatusColor}" 
                                CornerRadius="10" 
                                Padding="8,3" 
                                Margin="15,3,0,0"
                                ToolTip="{Binding MarketStatusTooltip}">
                            <TextBlock Text="{Binding MarketStatusText}" 
                                       Foreground="White" 
                                       FontSize="11"
                                       FontWeight="Bold"
                                       FontFamily="Franklin Gothic Medium"/>
                        </Border>
                    </StackPanel>
                    
                    <!-- Real-Time Price Display -->
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="Last: " 
                                   Foreground="White" 
                                   FontSize="14"
                                   FontFamily="Franklin Gothic Medium"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding RealTimePrice, StringFormat=\${0:F2}}" 
                                   Foreground="{Binding PriceChangeColor}" 
                                   FontSize="20"
                                   FontWeight="Bold"
                                   FontFamily="Franklin Gothic Medium"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding PriceChange, StringFormat=' {0:+0.00;-0.00;0.00}'}" 
                                   Foreground="{Binding PriceChangeColor}" 
                                   FontSize="14"
                                   Margin="8,0,0,0"
                                   FontFamily="Franklin Gothic Medium"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding PriceChangePercent, StringFormat='({0:+0.00;-0.00;0.00}%)'}" 
                                   Foreground="{Binding PriceChangeColor}" 
                                   FontSize="14"
                                   Margin="3,0,0,0"
                                   FontFamily="Franklin Gothic Medium"
                                   VerticalAlignment="Center"/>
                        <!-- Price Tick Animation -->
                        <TextBlock x:Name="PriceTickIndicator" 
                                   Text="{Binding PriceTickSymbol}" 
                                   Foreground="{Binding PriceTickColor}" 
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding ShowPriceTick, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                    
                    <!-- Bid/Ask Spread -->
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0" 
                                Visibility="{Binding ShowBidAsk, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Bid: " 
                                   Foreground="#AAAAAA" 
                                   FontSize="11"
                                   FontFamily="Franklin Gothic Medium"/>
                        <TextBlock Text="{Binding BidPrice, StringFormat=\${0:F2}}" 
                                   Foreground="#FF6B6B" 
                                   FontSize="11"
                                   FontWeight="Bold"
                                   FontFamily="Franklin Gothic Medium"/>
                        <TextBlock Text="x" 
                                   Foreground="#666" 
                                   FontSize="11"
                                   Margin="3,0,3,0"/>
                        <TextBlock Text="{Binding BidSize}" 
                                   Foreground="#AAAAAA" 
                                   FontSize="10"
                                   FontFamily="Franklin Gothic Medium"/>
                        
                        <!-- Spread Visualization -->
                        <Border Background="#3E3E56" 
                                Height="12" 
                                Width="80" 
                                CornerRadius="2" 
                                Margin="10,0,10,0"
                                ToolTip="{Binding SpreadTooltip}">
                            <Grid>
                                <Border Background="#FF6B6B" 
                                        HorizontalAlignment="Left" 
                                        Width="{Binding BidSpreadWidth}" 
                                        CornerRadius="2,0,0,2"/>
                                <Border Background="#51CF66" 
                                        HorizontalAlignment="Right" 
                                        Width="{Binding AskSpreadWidth}" 
                                        CornerRadius="0,2,2,0"/>
                                <TextBlock Text="{Binding SpreadPercent, StringFormat={}{0:F2}%}" 
                                           Foreground="White" 
                                           FontSize="8"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <TextBlock Text="Ask: " 
                                   Foreground="#AAAAAA" 
                                   FontSize="11"
                                   FontFamily="Franklin Gothic Medium"/>
                        <TextBlock Text="{Binding AskPrice, StringFormat=\${0:F2}}" 
                                   Foreground="#51CF66" 
                                   FontSize="11"
                                   FontWeight="Bold"
                                   FontFamily="Franklin Gothic Medium"/>
                        <TextBlock Text="×" 
                                   Foreground="#666" 
                                   FontSize="11"
                                   Margin="3,0,3,0"/>
                        <TextBlock Text="{Binding AskSize}" 
                                   Foreground="#AAAAAA" 
                                   FontSize="10"
                                   FontFamily="Franklin Gothic Medium"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Center: Countdown and Status Info -->
                <StackPanel Grid.Column="1" 
                            Orientation="Vertical" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <!-- Refresh Countdown -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Visibility="{Binding ShowCountdown, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="⏱" 
                                   Foreground="#FFA500" 
                                   FontSize="16"
                                   Margin="0,0,5,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Next refresh in " 
                                   Foreground="#AAAAAA" 
                                   FontSize="12"
                                   FontFamily="Franklin Gothic Medium"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding CountdownSeconds}" 
                                   Foreground="#FFA500" 
                                   FontSize="16"
                                   FontWeight="Bold"
                                   FontFamily="Franklin Gothic Medium"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="s" 
                                   Foreground="#AAAAAA" 
                                   FontSize="12"
                                   FontFamily="Franklin Gothic Medium"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Market Hours Info -->
                    <TextBlock Text="{Binding MarketHoursText}" 
                               Foreground="#888" 
                               FontSize="10"
                               FontFamily="Franklin Gothic Medium"
                               HorizontalAlignment="Center"
                               Margin="0,3,0,0"
                               ToolTip="Regular market hours: 9:30 AM - 4:00 PM ET"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Auto-Refresh: " 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               FontFamily="Franklin Gothic Medium"/>
                    <ToggleButton x:Name="AutoRefreshToggle" 
                                  IsChecked="{Binding IsAutoRefreshEnabled, Mode=TwoWay}"
                                  Width="50" 
                                  Height="25"
                                  Content="{Binding AutoRefreshText}"
                                  Style="{StaticResource EnhancedToggleButtonStyle}"
                                  Margin="5,0,10,0"/>
                    <Button x:Name="PauseButton" 
                            Content="{Binding PauseButtonText}" 
                            Click="PauseButton_Click"
                            Style="{StaticResource EnhancedButtonStyle}"
                            Padding="10,5"
                            Margin="0,0,10,0"
                            ToolTip="Pause/Resume chart updates"/>
                    <Button x:Name="ConfigureRefreshButton" 
                            Content="⚙ Configure" 
                            Click="ChangeRefreshIntervalButton_Click"
                            Style="{StaticResource EnhancedButtonStyle}"
                            Padding="10,5"
                            Margin="0,0,10,0"
                            ToolTip="Configure refresh interval"/>
                    <Button x:Name="RefreshButton" 
                            Content="? Refresh Now" 
                            Click="RefreshButton_Click"
                            Style="{StaticResource EnhancedButtonStyle}"
                            Padding="10,5"
                            Margin="0,0,10,0"/>
                    <Button x:Name="CloseButton" 
                            Content="? Close" 
                            Click="CloseButton_Click"
                            Style="{StaticResource EnhancedButtonStyle}"
                            Padding="10,5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Interval Selector and Chart Controls -->
        <Border Grid.Row="1" 
                Background="#2D2D4D" 
                BorderBrush="#3E3E56" 
                BorderThickness="1" 
                CornerRadius="3" 
                Padding="10"
                Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- First Row: Basic Controls -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Interval Selector -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="Interval: " 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"
                               FontFamily="Franklin Gothic Medium"/>
                    <ComboBox x:Name="IntervalComboBox" 
                              SelectedIndex="1"
                              Width="100"
                              Style="{StaticResource EnhancedComboBoxStyle}"
                              SelectionChanged="IntervalComboBox_SelectionChanged">
                        <ComboBoxItem Content="1 min"/>
                        <ComboBoxItem Content="5 min"/>
                        <ComboBoxItem Content="15 min"/>
                        <ComboBoxItem Content="30 min"/>
                        <ComboBoxItem Content="60 min"/>
                    </ComboBox>
                    </StackPanel>

                    <!-- Candle Limit Selector -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="Candles: " 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"
                               FontFamily="Franklin Gothic Medium"/>
                    <ComboBox x:Name="CandleLimitComboBox"
                              x:FieldModifier="private"
                              SelectedIndex="1"
                              Width="80"
                              Style="{StaticResource EnhancedComboBoxStyle}"
                              SelectionChanged="CandleLimitComboBox_SelectionChanged">
                        <ComboBoxItem Content="50" Tag="50"/>
                        <ComboBoxItem Content="100" Tag="100"/>
                        <ComboBoxItem Content="200" Tag="200"/>
                        <ComboBoxItem Content="All" Tag="0"/>
                    </ComboBox>
                    </StackPanel>

                    <!-- Zoom Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,20,0">
                    <Button x:Name="ZoomInButton" 
                            Content="?" 
                            Click="ZoomInButton_Click"
                            Style="{StaticResource EnhancedButtonStyle}"
                            Width="30" Height="30"
                            Padding="2"
                            Margin="0,0,5,0"
                            ToolTip="Zoom In"/>
                    <Button x:Name="ZoomOutButton" 
                            Content="?" 
                            Click="ZoomOutButton_Click"
                            Style="{StaticResource EnhancedButtonStyle}"
                            Width="30" Height="30"
                            Padding="2"
                            Margin="0,0,5,0"
                            ToolTip="Zoom Out"/>
                    <Button x:Name="ResetZoomButton" 
                            Content="?" 
                            Click="ResetZoomButton_Click"
                            Style="{StaticResource EnhancedButtonStyle}"
                            Width="30" Height="30"
                            Padding="2"
                            ToolTip="Reset Zoom"/>
                    </StackPanel>

                    <!-- Last Update Text -->
                    <TextBlock Grid.Column="3" 
                               Text="{Binding LastUpdateText}" 
                               Foreground="#AAAAAA" 
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="0,0,20,0"
                               FontFamily="Franklin Gothic Medium"/>

                    <!-- Cache Status -->
                    <StackPanel Grid.Column="4" Orientation="Horizontal">
                        <TextBlock Text="? " 
                                   Foreground="#4CAF50"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"
                                   FontFamily="Franklin Gothic Medium"
                                   Visibility="{Binding IsCacheValid, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   ToolTip="Data cached - no API call needed"/>
                        <TextBlock Text="{Binding CacheStatusText}" 
                                   Foreground="#AAAAAA" 
                                   VerticalAlignment="Center"
                                   FontFamily="Franklin Gothic Medium"
                                   FontSize="10"/>
                    </StackPanel>
                </Grid>
                
                <!-- Second Row: Technical Indicators and Drawing Tools -->
                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Indicators Section -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Indicators: " 
                                   Foreground="White" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"
                                   FontFamily="Franklin Gothic Medium"/>
                        <CheckBox x:Name="ShowSmaCheckBox" 
                                  Content="SMA" 
                                  IsChecked="{Binding ShowSMA, Mode=TwoWay}"
                                  Margin="0,0,10,0"
                                  Foreground="White"
                                  ToolTip="Simple Moving Average (20-period)"/>
                        <CheckBox x:Name="ShowEmaCheckBox" 
                                  Content="EMA" 
                                  IsChecked="{Binding ShowEMA, Mode=TwoWay}"
                                  Margin="0,0,10,0"
                                  Foreground="White"
                                  ToolTip="Exponential Moving Average (20-period)"/>
                        <CheckBox x:Name="ShowRsiCheckBox" 
                                  Content="RSI" 
                                  IsChecked="{Binding ShowRSI, Mode=TwoWay}"
                                  Margin="0,0,10,0"
                                  Foreground="White"
                                  ToolTip="Relative Strength Index (14-period)"/>
                        <CheckBox x:Name="ShowMacdCheckBox" 
                                  Content="MACD" 
                                  IsChecked="{Binding ShowMACD, Mode=TwoWay}"
                                  Margin="0,0,10,0"
                                  Foreground="White"
                                  ToolTip="Moving Average Convergence Divergence"/>
                        <CheckBox x:Name="ShowBollingerCheckBox" 
                                  Content="BB" 
                                  IsChecked="{Binding ShowBollingerBands, Mode=TwoWay}"
                                  Margin="0,0,10,0"
                                  Foreground="White"
                                  ToolTip="Bollinger Bands (20-period, 2 std dev)"/>
                        <CheckBox x:Name="ShowVwapCheckBox" 
                                  Content="VWAP" 
                                  IsChecked="{Binding ShowVWAP, Mode=TwoWay}"
                                  Margin="0,0,10,0"
                                  Foreground="White"
                                  ToolTip="Volume Weighted Average Price"/>
                    </StackPanel>
                    
                    <!-- Drawing Tools Section -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="Drawing: " 
                                   Foreground="White" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"
                                   FontFamily="Franklin Gothic Medium"/>
                        <Button x:Name="AddHorizontalLineButton" 
                                Content="? Add Level" 
                                Click="AddHorizontalLineButton_Click"
                                Style="{StaticResource EnhancedButtonStyle}"
                                Padding="8,4"
                                Margin="0,0,5,0"
                                ToolTip="Add horizontal line for support/resistance"/>
                        <Button x:Name="ClearDrawingsButton" 
                                Content="? Clear Lines" 
                                Click="ClearDrawingsButton_Click"
                                Style="{StaticResource EnhancedButtonStyle}"
                                Padding="8,4"
                                ToolTip="Clear all drawn lines"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Candlestick Chart -->
        <Border Grid.Row="2" 
                Background="#2D2D4D" 
                BorderBrush="#3E3E56" 
                BorderThickness="1" 
                CornerRadius="3" 
                Padding="10"
                Margin="0,0,0,10">
            <Grid>
                <lvc:CartesianChart x:Name="CandlestickChart" 
                                    Series="{Binding CandlestickSeries}"
                                    LegendLocation="Right"
                                    Visibility="{Binding IsDataLoaded, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    Zoom="X"
                                    Pan="X"
                                    Hoverable="True"
                                    Cursor="Cross"
                                    MouseMove="CandlestickChart_MouseMove">
                    <lvc:CartesianChart.ChartLegend>
                        <lvc:DefaultLegend BulletSize="15" Foreground="White" Background="#2D2D4D"/>
                    </lvc:CartesianChart.ChartLegend>
                    <lvc:CartesianChart.DataTooltip>
                        <lvc:DefaultTooltip Background="#2D2D4D" 
                                           Foreground="White" 
                                           BorderBrush="#3E3E56" 
                                           BorderThickness="1"
                                           CornerRadius="3"
                                           FontFamily="Franklin Gothic Medium"
                                           FontSize="11"/>
                    </lvc:CartesianChart.DataTooltip>
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Time" 
                                  Labels="{Binding TimeLabels}"
                                  Foreground="White"
                                  FontFamily="Franklin Gothic Medium"
                                  FontSize="10"
                                  MinValue="{Binding XAxisMin}"
                                  MaxValue="{Binding XAxisMax}">
                            <lvc:Axis.Separator>
                                <lvc:Separator StrokeThickness="1" Stroke="#3E3E56"/>
                            </lvc:Axis.Separator>
                        </lvc:Axis>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Price (USD)" 
                                  Foreground="White"
                                  LabelFormatter="{Binding PriceFormatter}"
                                  FontFamily="Franklin Gothic Medium"
                                  MinValue="{Binding YAxisMin}"
                                  MaxValue="{Binding YAxisMax}">
                            <lvc:Axis.Separator>
                                <lvc:Separator StrokeThickness="1" Stroke="#3E3E56"/>
                            </lvc:Axis.Separator>
                        </lvc:Axis>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>

                <!-- Loading Indicator -->
                <StackPanel VerticalAlignment="Center" 
                            HorizontalAlignment="Center"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="? Loading candlestick data..." 
                               Foreground="White" 
                               FontSize="16"
                               HorizontalAlignment="Center"
                               FontFamily="Franklin Gothic Medium"/>
                    <TextBlock Text="{Binding LoadingProgressText}" 
                               Foreground="#1E90FF" 
                               FontSize="14"
                               HorizontalAlignment="Center"
                               FontFamily="Franklin Gothic Medium"
                               Margin="0,5,0,0"/>
                    <ProgressBar IsIndeterminate="{Binding IsProgressIndeterminate}" 
                                 Value="{Binding LoadingProgress}"
                                 Maximum="100"
                                 Height="10" 
                                 Width="200" 
                                 Margin="0,10,0,0"
                                 Foreground="#1E90FF"
                                 Background="#3E3E56"/>
                </StackPanel>

                <!-- No Data Message -->
                <TextBlock Text="No candlestick data available" 
                           Foreground="#AAAAAA" 
                           FontSize="16"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontFamily="Franklin Gothic Medium"
                           Visibility="{Binding IsNoData, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
        </Border>

        <!-- Volume Chart -->
        <Border Grid.Row="3" 
                Background="#2D2D4D" 
                BorderBrush="#3E3E56" 
                BorderThickness="1" 
                CornerRadius="3" 
                Padding="10"
                Margin="0,0,0,10">
            <lvc:CartesianChart x:Name="VolumeChart" 
                                Series="{Binding VolumeSeries}"
                                LegendLocation="Bottom"
                                Visibility="{Binding IsDataLoaded, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Hoverable="True">
                <lvc:CartesianChart.ChartLegend>
                    <lvc:DefaultLegend BulletSize="12" Foreground="White" Background="#2D2D4D" Orientation="Horizontal"/>
                </lvc:CartesianChart.ChartLegend>
                <lvc:CartesianChart.DataTooltip>
                    <lvc:DefaultTooltip Background="#2D2D4D" 
                                       Foreground="White" 
                                       BorderBrush="#3E3E56" 
                                       BorderThickness="1"
                                       CornerRadius="3"
                                       FontFamily="Franklin Gothic Medium"
                                       FontSize="11"/>
                </lvc:CartesianChart.DataTooltip>
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis ShowLabels="False">
                        <lvc:Axis.Separator>
                            <lvc:Separator StrokeThickness="0"/>
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Volume" 
                              Foreground="White"
                              LabelFormatter="{Binding VolumeFormatter}"
                              FontFamily="Franklin Gothic Medium">
                        <lvc:Axis.Separator>
                            <lvc:Separator StrokeThickness="1" Stroke="#3E3E56"/>
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="4" 
                Background="#2D2D4D" 
                BorderBrush="#3E3E56" 
                BorderThickness="1" 
                CornerRadius="3" 
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusText}" 
                           Foreground="White"
                           VerticalAlignment="Center"
                           FontFamily="Franklin Gothic Medium"/>

                <TextBlock Grid.Column="2" 
                           Text="{Binding CrosshairPriceText}" 
                           Foreground="Cyan"
                           VerticalAlignment="Center"
                           FontFamily="Franklin Gothic Medium"
                           Margin="0,0,20,0"/>

                <TextBlock Grid.Column="3" 
                           Text="{Binding ApiUsageText}" 
                           Foreground="#AAAAAA"
                           VerticalAlignment="Center"
                           FontFamily="Franklin Gothic Medium"/>
            </Grid>
        </Border>
    </Grid>
</Window>
