<UserControl x:Class="Quantra.Controls.SentimentVisualizationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Quantra.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600"
             Background="#1E1E30">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Quantra;component/Styles/EnhancedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/> <!-- Sentiment Trend Chart -->
            <RowDefinition Height="Auto"/> <!-- Source Correlation Section -->
            <RowDefinition Height="Auto"/> <!-- Event List -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:Card Grid.Row="0" Style="{StaticResource EnhancedContentCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Sentiment Analysis" 
                       Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Predictive Accuracy: " Style="{StaticResource EnhancedTextBlockStyle}" Margin="0,0,2,0" VerticalAlignment="Center"/>
                    <materialDesign:Card Style="{StaticResource EnhancedContentCardStyle}" Padding="4,2">
                        <TextBlock x:Name="PredictiveAccuracyTextBlock" Text="0.00%" Style="{StaticResource EnhancedSmallTextBlockStyle}"/>
                    </materialDesign:Card>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0,0,0">
                    <TextBlock Text="Lead/Lag: " Style="{StaticResource EnhancedTextBlockStyle}" Margin="0,0,2,0" VerticalAlignment="Center"/>
                    <materialDesign:Card Style="{StaticResource EnhancedContentCardStyle}" Padding="4,2">
                        <TextBlock x:Name="LeadLagTextBlock" Text="0.0 days" Style="{StaticResource EnhancedSmallTextBlockStyle}"/>
                    </materialDesign:Card>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Sentiment Trend Chart -->
        <materialDesign:Card Grid.Row="1" Style="{StaticResource EnhancedContentCardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Historical Sentiment Trends" 
                           Style="{StaticResource EnhancedHeaderTextBlockStyle}" Margin="10,5"/>
                
                <lvc:CartesianChart Grid.Row="1" x:Name="SentimentTrendChart" 
                                    DisableAnimations="True" 
                                    Hoverable="True"
                                    Margin="10">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis x:Name="SentimentTrendChartAxisX"
                                  Title="Date" 
                                  Foreground="White"
                                  FontSize="11"
                                  Separator="{x:Static lvc:DefaultAxes.CleanSeparator}"/>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis x:Name="SentimentTrendChartAxisY"
                                  Title="Sentiment Score" 
                                  Foreground="White" 
                                  FontSize="11"
                                  MinValue="-1" 
                                  MaxValue="1"
                                  Separator="{x:Static lvc:DefaultAxes.CleanSeparator}"/>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
            </Grid>
        </materialDesign:Card>
        
        <!-- Source Correlation Section -->
        <materialDesign:Card Grid.Row="2" Style="{StaticResource EnhancedContentCardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Sentiment Source Correlations" 
                           Style="{StaticResource EnhancedHeaderTextBlockStyle}" Margin="10,5"/>
                
                <lvc:CartesianChart Grid.Row="1" x:Name="SourceCorrelationChart" 
                                    DisableAnimations="True" 
                                    Height="120" Margin="10,0,10,10">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis x:Name="SourceCorrelationChartAxisX"
                                  Foreground="White" FontSize="11"
                                  Separator="{x:Static lvc:DefaultAxes.CleanSeparator}"
                                  Labels="{Binding SourceLabels}"/>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis x:Name="SourceCorrelationChartAxisY"
                                  Title="Correlation" 
                                  Foreground="White" FontSize="11"
                                  MinValue="-1" MaxValue="1"
                                  Separator="{x:Static lvc:DefaultAxes.CleanSeparator}"/>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
            </Grid>
        </materialDesign:Card>

        <!-- Sentiment Shift Events Section -->
        <materialDesign:Card Grid.Row="3" Style="{StaticResource EnhancedContentCardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Recent Sentiment Shifts" 
                           Style="{StaticResource EnhancedHeaderTextBlockStyle}" Margin="10,5"/>
                
                <ListView Grid.Row="1" x:Name="SentimentShiftEventsListView" 
                          Background="Transparent" BorderThickness="0" 
                          MaxHeight="80" Margin="10,0,10,5">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="{Binding Date, StringFormat={}{0:MM/dd}}" 
                                           Style="{StaticResource EnhancedTextBlockStyle}" Margin="0,0,10,0"/>
                                
                                <TextBlock Grid.Column="1" Text="{Binding Source}" 
                                           Style="{StaticResource EnhancedTextBlockStyle}"/>
                                
                                <TextBlock Grid.Column="2" Margin="10,0">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} ({1:F2})">
                                            <Binding Path="Direction"/>
                                            <Binding Path="SentimentShift"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource EnhancedTextBlockStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SentimentShift}" Value="Positive">
                                                    <Setter Property="Foreground" Value="#20C040"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding SentimentShift}" Value="Negative">
                                                    <Setter Property="Foreground" Value="#C02020"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                
                                <TextBlock Grid.Column="3" Text="{Binding SubsequentPriceChange, StringFormat={}Price: {0:F2}%}" 
                                           Style="{StaticResource EnhancedTextBlockStyle}"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>