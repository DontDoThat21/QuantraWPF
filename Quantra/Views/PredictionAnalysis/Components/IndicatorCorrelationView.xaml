<UserControl x:Class="Quantra.Controls.Components.IndicatorCorrelationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quantra.Controls.Components"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Panel -->
        <Grid Grid.Row="0" Margin="5,5,5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Vertical">
                <TextBlock x:Name="TitleTextBlock" Text="Indicator Correlation Analysis" 
                       FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock x:Name="SymbolTextBlock" Text="Symbol: AAPL" 
                       FontSize="12" Margin="0,0,0,5"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="RefreshButton" Content="Refresh" Margin="5,0" Padding="10,3" Click="RefreshButton_Click"/>
                <Button x:Name="CloseButton" Content="Ã—" Width="25" Height="25" Click="CloseButton_Click"/>
            </StackPanel>
        </Grid>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="5">
            <TabItem Header="Correlation Heatmap">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Correlation Heatmap Canvas -->
                    <Canvas x:Name="HeatmapCanvas" Grid.Row="0" Margin="10" Background="#FF1E1E1E"/>
                    
                    <!-- Legend -->
                    <Grid Grid.Row="1" Margin="10,0,10,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="-1.0" Grid.Column="0"/>
                        <Border Grid.Column="1" Height="15" Margin="5,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                    <GradientStop Color="Red" Offset="0"/>
                                    <GradientStop Color="White" Offset="0.5"/>
                                    <GradientStop Color="Green" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <TextBlock Text="+1.0" Grid.Column="2"/>
                    </Grid>
                </Grid>
            </TabItem>
            
            <TabItem Header="Confirmation Patterns">
                <ListView x:Name="PatternsListView" Margin="5" SelectionChanged="PatternsListView_SelectionChanged">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Pattern Type" Width="150" 
                                            DisplayMemberBinding="{Binding PatternType}"/>
                            <GridViewColumn Header="Direction" Width="80" 
                                            DisplayMemberBinding="{Binding SignalDirection}"/>
                            <GridViewColumn Header="Strength" Width="80" 
                                            DisplayMemberBinding="{Binding ConfirmationStrength, StringFormat=P0}"/>
                            <GridViewColumn Header="Reliability" Width="80" 
                                            DisplayMemberBinding="{Binding Reliability, StringFormat=P0}"/>
                            <GridViewColumn Header="Time Horizon" Width="100" 
                                            DisplayMemberBinding="{Binding TimeHorizon}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            
            <TabItem Header="Correlation Details">
                <ListView x:Name="CorrelationsListView" Margin="5" SelectionChanged="CorrelationsListView_SelectionChanged">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="First Indicator" Width="100" 
                                            DisplayMemberBinding="{Binding FirstIndicator}"/>
                            <GridViewColumn Header="Second Indicator" Width="100" 
                                            DisplayMemberBinding="{Binding SecondIndicator}"/>
                            <GridViewColumn Header="Correlation" Width="80" 
                                            DisplayMemberBinding="{Binding CorrelationCoefficient, StringFormat=F2}"/>
                            <GridViewColumn Header="Strength" Width="80" 
                                            DisplayMemberBinding="{Binding CorrelationStrength}"/>
                            <GridViewColumn Header="Confidence" Width="80" 
                                            DisplayMemberBinding="{Binding ConfidenceLevel, StringFormat=P0}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            
            <TabItem Header="Correlation Chart">
                <Grid>
                    <lvc:CartesianChart x:Name="CorrelationChart" Margin="10">
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Title="First Indicator" LabelFormatter="{Binding DateFormatter}" />
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="Value" />
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Status Panel -->
        <Border Grid.Row="2" Background="#FF2D2D30" Padding="5" Margin="5,0,5,5">
            <TextBlock x:Name="StatusTextBlock" Text="Ready" Foreground="White"/>
        </Border>
    </Grid>
</UserControl>