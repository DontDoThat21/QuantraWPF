<UserControl x:Class="Quantra.Controls.Components.PatternRecognitionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Quantra.Controls.Components"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Quantra;component/Styles/EnhancedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Pattern List -->
        <Grid Grid.Column="0" Margin="0,0,5,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Detected Patterns" 
                       Style="{StaticResource EnhancedHeaderTextBlockStyle}" Margin="5"/>

            <ListBox Grid.Row="1" x:Name="PatternListBox" 
                     Background="#2D2D42" Style="{StaticResource EnhancedTextBlockStyle}" 
                     BorderBrush="#3E3E56"
                     SelectionChanged="PatternListBox_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Symbol}" Width="60" />
                            <TextBlock Text="{Binding PatternName}" Width="120"/>
                            <TextBlock Text="{Binding Reliability, StringFormat={}{0:P0}}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!-- Pattern Details -->
        <Grid Grid.Column="1" Background="#262639">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>

            <!-- Pattern Info -->
            <StackPanel Grid.Row="0" Margin="10,5">
                <TextBlock x:Name="PatternTitleText" Text="Select a pattern" 
                           Style="{StaticResource EnhancedHeaderTextBlockStyle}"/>
                <TextBlock x:Name="PatternSymbolText" Text="" 
                            Style="{StaticResource EnhancedSmallTextBlockStyle}" Margin="0,2"/>
                <TextBlock x:Name="PatternReliabilityText" Text="" 
                            Style="{StaticResource EnhancedSmallTextBlockStyle}"/>
            </StackPanel>

            <!-- Pattern Chart -->
            <lvc:CartesianChart Grid.Row="1" x:Name="PatternChart" Margin="10,5" 
                                DisableAnimations="True"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                MinHeight="150">
                <lvc:CartesianChart.Series>
                    <lvc:CandleSeries Title="Price" 
                                      Values="{Binding PatternCandles}"
                                      PointGeometry="{x:Null}"/>
                    <lvc:LineSeries Title="Pattern" 
                                    Values="{Binding PatternHighlights}"
                                    PointGeometry="{x:Null}" 
                                    Fill="Transparent" 
                                    Stroke="#FFFF00" StrokeThickness="2"
                                    StrokeDashArray="3"/>
                </lvc:CartesianChart.Series>
            </lvc:CartesianChart>

            <!-- Pattern Description -->
            <materialDesign:Card Grid.Row="2" Style="{StaticResource EnhancedContentCardStyle}" Margin="10,5">
                <StackPanel>
                    <TextBlock Text="Pattern Description" 
                               Style="{StaticResource EnhancedTextBlockStyle}"  Margin="5,2"/>
                    <TextBlock x:Name="PatternDescriptionText" Text="No pattern selected" 
                               Style="{StaticResource EnhancedTextBlockStyle}" TextWrapping="Wrap" Margin="5,2"/>
                    <TextBlock x:Name="PatternOutcomeText" Text="" 
                               Style="{StaticResource EnhancedSmallTextBlockStyle}" TextWrapping="Wrap" Margin="5,2"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>