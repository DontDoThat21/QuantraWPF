<UserControl x:Class="Quantra.Controls.Components.SectorAnalysisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quantra.Controls.Components"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sector Selection -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,5">
            <TextBlock Text="Sector:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="SectorComboBox" Width="150" Margin="0,0,10,0"
                      Background="#2D2D42" Foreground="Black" BorderBrush="#3E3E56"
                      SelectionChanged="SectorComboBox_SelectionChanged">
                <ComboBoxItem Content="Technology" IsSelected="True"/>
                <ComboBoxItem Content="Financial"/>
                <ComboBoxItem Content="Healthcare"/>
                <ComboBoxItem Content="Consumer Cyclical"/>
                <ComboBoxItem Content="Communication"/>
                <ComboBoxItem Content="Industrial"/>
                <ComboBoxItem Content="Energy"/>
            </ComboBox>
        </StackPanel>

        <!-- Sector Charts -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Heatmap Chart -->
            <Grid Grid.Row="0" Grid.Column="0" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Sector Momentum Heatmap" 
                           Foreground="White" FontSize="14" Margin="5"/>

                <Image Grid.Row="1" x:Name="HeatmapImage" Stretch="Uniform"/>
            </Grid>

            <!-- Top Performers Chart -->
            <Grid Grid.Row="0" Grid.Column="1" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Top 5 Performers in Sector" 
                           Foreground="White" FontSize="14" Margin="5"/>

                <lvc:CartesianChart Grid.Row="1" x:Name="TopPerformersChart"
                                  HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Stretch"
                                  MinHeight="150">
                    <lvc:CartesianChart.Series>
                        <lvc:ColumnSeries Title="Growth %" 
                                          Values="{Binding TopPerformerValues}"
                                          Fill="#20C040"/>
                    </lvc:CartesianChart.Series>
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Symbols" Labels="{Binding TopPerformerLabels}"/>
                    </lvc:CartesianChart.AxisX>
                </lvc:CartesianChart>
            </Grid>

            <!-- Sector Prediction List -->
            <Grid Grid.Row="1" Grid.Column="0" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Top Predictions in Sector" 
                           Foreground="White" FontSize="14" Margin="5"/>

                <DataGrid Grid.Row="1" x:Name="SectorPredictionDataGrid" 
                          AutoGenerateColumns="False" 
                          Background="#2D2D42" Foreground="GhostWhite" 
                          BorderBrush="#3E3E56" AlternatingRowBackground="#3E3E56"
                          CanUserAddRows="False" CanUserDeleteRows="False"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          IsReadOnly="True">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding PredictedAction}" Value="BUY">
                                    <Setter Property="Background" Value="#304838"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding PredictedAction}" Value="SELL">
                                    <Setter Property="Background" Value="#4A3030"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" Width="SizeToHeader" MinWidth="60" Foreground="GhostWhite">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Foreground" Value="GhostWhite"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Action" Binding="{Binding PredictedAction}" Width="SizeToHeader" MinWidth="60" Foreground="GhostWhite">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Foreground" Value="GhostWhite"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="Conf %" Width="*" MinWidth="60">
                            <DataGridTemplateColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Foreground" Value="GhostWhite"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTemplateColumn.HeaderStyle>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <ProgressBar Value="{Binding Confidence}" 
                                                    Minimum="0" Maximum="1" 
                                                    Height="15"
                                                    HorizontalAlignment="Stretch">
                                            <ProgressBar.Style>
                                                <Style TargetType="ProgressBar">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding PredictedAction}" Value="BUY">
                                                            <Setter Property="Foreground" Value="#20C040"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding PredictedAction}" Value="SELL">
                                                            <Setter Property="Foreground" Value="#C02020"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ProgressBar.Style>
                                        </ProgressBar>
                                        <TextBlock Text="{Binding Confidence, StringFormat={}{0:P0}}" 
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"
                                                FontSize="10"
                                                FontWeight="Bold"
                                                Foreground="White"/>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Potential" Binding="{Binding PotentialReturn, StringFormat={}{0:P2}}" Width="SizeToHeader" MinWidth="70" Foreground="GhostWhite">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Foreground" Value="GhostWhite"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding PredictedAction}" Value="BUY">
                                            <Setter Property="Foreground" Value="#20C040"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding PredictedAction}" Value="SELL">
                                            <Setter Property="Foreground" Value="#C02020"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <!-- Sector Trends -->
            <Grid Grid.Row="1" Grid.Column="1" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Current Sector Trends" 
                           Foreground="White" FontSize="14" Margin="5"/>

                <ListBox Grid.Row="1" x:Name="SectorTrendsListBox" 
                         Background="#2D2D42" Foreground="White" 
                         BorderBrush="#3E3E56">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="0,5"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
