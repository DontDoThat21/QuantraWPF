<UserControl x:Class="Quantra.Controls.MarketChatControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quantra.Controls"
             xmlns:models="clr-namespace:Quantra.Models"
             xmlns:converters="clr-namespace:Quantra.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#1E1E30"
             HorizontalAlignment="Stretch" 
             VerticalAlignment="Stretch"
             Width="Auto" Height="Auto"
             MinWidth="400" MinHeight="300">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Quantra;component/Styles/EnhancedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Message template selector -->
            <DataTemplate x:Key="UserMessageTemplate">
                <Border Background="#0066CC" CornerRadius="10,10,2,10" Padding="12,8" Margin="50,2,10,2" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding Content}" Style="{StaticResource EnhancedSmallTextBlockStyle}" TextWrapping="Wrap"/>
                </Border>
            </DataTemplate>
        
        <DataTemplate x:Key="AssistantMessageTemplate">
            <Border Background="#2D2D48" CornerRadius="10,10,10,2" Padding="12,8" Margin="10,2,50,2" HorizontalAlignment="Left">
                <StackPanel>
                    <TextBlock Text="{Binding Content}" Style="{StaticResource EnhancedSmallTextBlockStyle}" TextWrapping="Wrap"/>
                    <TextBlock Text="{Binding TimestampDisplay}" Foreground="#CCCCCC" FontSize="10" 
                               HorizontalAlignment="Right" Margin="0,4,0,0" Opacity="0.7"/>
                </StackPanel>
            </Border>
        </DataTemplate>
        
        <DataTemplate x:Key="SystemMessageTemplate">
            <Border Background="#4A4A4A" CornerRadius="5" Padding="8,4" Margin="20,2,20,2" HorizontalAlignment="Center">
                <TextBlock Text="{Binding Content}" Style="{StaticResource EnhancedSmallTextBlockStyle}" TextWrapping="Wrap" 
                           FontStyle="Italic" TextAlignment="Center"/>
            </Border>
        </DataTemplate>
        
        <DataTemplate x:Key="LoadingMessageTemplate">
            <Border Background="#2D2D48" CornerRadius="10,10,10,2" Padding="12,8" Margin="10,2,50,2" HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Content}" Style="{StaticResource EnhancedSmallTextBlockStyle}" VerticalAlignment="Center"/>
                    <ProgressBar IsIndeterminate="True" Width="80" Height="4" Margin="10,0,0,0" 
                                 VerticalAlignment="Center" Background="Transparent" Foreground="#0066CC"/>
                </StackPanel>
            </Border>
        </DataTemplate>
        
        <!-- Message template selector -->
        <local:MessageTemplateSelector x:Key="MessageTemplateSelector"
                                       UserMessageTemplate="{StaticResource UserMessageTemplate}"
                                       AssistantMessageTemplate="{StaticResource AssistantMessageTemplate}"
                                       SystemMessageTemplate="{StaticResource SystemMessageTemplate}"
                                       LoadingMessageTemplate="{StaticResource LoadingMessageTemplate}"/>
        
        <!-- Converters are now defined globally in App.xaml -->
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- Chat Messages -->
            <RowDefinition Height="Auto"/>
            <!-- Input Area -->
            <RowDefinition Height="Auto"/>
            <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Title and Controls -->
        <Grid Grid.Row="0" Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Market Analysis Chat" Style="{StaticResource EnhancedHeaderTextBlockStyle}" 
                       Margin="5,0,0,10"/>
                       
            <Button Grid.Column="1" Content="Get Trading Plan" 
                    Command="{Binding RequestTradingPlanCommand}"
                    Style="{StaticResource EnhancedButtonStyle}" 
                    Margin="5,0,10,10" 
                    HorizontalAlignment="Right" VerticalAlignment="Top"/>

            <Button Grid.Column="2" Content="Clear History" 
                    Command="{Binding ClearHistoryCommand}"
                    Style="{StaticResource EnhancedButtonStyle}" 
                    Background="#FF6B6B"
                    Margin="0,0,0,10" 
                    HorizontalAlignment="Right" VerticalAlignment="Top"/>
        </Grid>

        <!-- Chat Messages -->
        <Border Grid.Row="1" Background="#252540" CornerRadius="10" Padding="5" Margin="0,5">
            <ScrollViewer x:Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding Messages}" 
                              ItemTemplateSelector="{StaticResource MessageTemplateSelector}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Input Area -->
        <Border Grid.Row="2" Background="#2D2D48" CornerRadius="10" Padding="10" Margin="0,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="MessageTextBox" Grid.Column="0" 
                         Text="{Binding CurrentMessage, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource EnhancedTextBoxStyle}"
                         TextWrapping="Wrap" AcceptsReturn="True"
                         MaxLines="5" VerticalScrollBarVisibility="Auto"
                         KeyDown="MessageTextBox_KeyDown">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="#555555" BorderThickness="1" 
                                    CornerRadius="5" Padding="{TemplateBinding Padding}">
                                <ScrollViewer x:Name="PART_ContentHost" 
                                              VerticalScrollBarVisibility="{TemplateBinding VerticalScrollBarVisibility}"/>
                            </Border>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>

                <Button Grid.Column="1" Content="Send" 
                        Command="{Binding SendMessageCommand}"
                        IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBooleanConverter}}"
                        Style="{StaticResource EnhancedButtonStyle}" 
                        Margin="10,0,0,0" 
                        FontWeight="Bold" MinWidth="60"/>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#1A1A2E" CornerRadius="5" Padding="8,4" Margin="0,5,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" 
                           Style="{StaticResource EnhancedSmallTextBlockStyle}" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Processing..." Style="{StaticResource EnhancedSmallTextBlockStyle}" 
                               Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"
                               Margin="0,0,5,0"/>
                    <ProgressBar IsIndeterminate="True" Width="60" Height="4" 
                                 Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"
                                 Background="Transparent" Foreground="#0066CC"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>