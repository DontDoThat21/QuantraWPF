<Window x:Class="Quantra.Views.Shared.ConfirmationModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Confirm" 
        Height="200" 
        Width="400"
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#1A1A28"
        BorderBrush="#3E3E56"
        BorderThickness="1"
        KeyDown="Window_KeyDown">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Quantra;component/Styles/EnhancedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Button Style -->
            <Style x:Key="ConfirmationButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Margin" Value="10,0,10,0" />
                <Setter Property="MinWidth" Value="80" />
                <Setter Property="Height" Value="32" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Padding" Value="8,3" />
                <Setter Property="Foreground" Value="White" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border CornerRadius="0" BorderThickness="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="#262638" BorderBrush="#3E3E56" BorderThickness="0,0,0,1">
                <Grid>
                    <TextBlock x:Name="TitleTextBlock" 
                               Text="Confirmation" 
                               Style="{StaticResource EnhancedTextBlockStyle}"
                               Foreground="#1E90FF"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center" 
                               Margin="10,0,0,0" />
                    
                    <Button x:Name="CloseButton" 
                            Content="X" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Width="30" 
                            Height="30"
                            Background="Transparent" 
                            BorderThickness="0" 
                            FontSize="20" 
                            FontWeight="Bold"
                            Foreground="#CCCCCC"
                            Margin="0,0,5,0"
                            Click="CloseButton_Click" />
                </Grid>
            </Border>
            
            <!-- Content -->
            <Border Grid.Row="1" Padding="20,15">
                <TextBlock x:Name="MessageTextBlock" 
                           Text="Are you sure you want to proceed?"
                           Style="{StaticResource EnhancedTextBlockStyle}" 
                           TextWrapping="Wrap"
                           VerticalAlignment="Center" />
            </Border>
            
            <!-- Buttons -->
            <Border Grid.Row="2" Background="#262638" BorderBrush="#3E3E56" BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="0,0,15,0" 
                            VerticalAlignment="Center">
                    
                    <Button x:Name="YesButton" 
                            Content="Yes" 
                            Style="{StaticResource ConfirmationButtonStyle}"
                            Background="#31A278"
                            Click="YesButton_Click" />
                    
                    <Button x:Name="NoButton" 
                            Content="No" 
                            Style="{StaticResource ConfirmationButtonStyle}"
                            Background="#666677"
                            Click="NoButton_Click" />
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
